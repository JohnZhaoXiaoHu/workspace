<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="https://github.com/HeBianGu"
                    xmlns:local="clr-namespace:HeBianGu.Systems.Identity"
                    xmlns:s="clr-namespace:System"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">


    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/HeBianGu.General.WpfControlLib;component/Custom/Window/WindowBase.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="{ComponentResourceKey ResourceId=S.Window.MultiLogin.Default, TypeInTargetAssembly={x:Type local:MultiLoginWindowBase}}" BasedOn="{StaticResource {x:Static h:WindowBase.DynamicKey}}" TargetType="{x:Type local:MultiLoginWindowBase}">
        <Setter Property="Width" Value="750" />
        <Setter Property="Height" Value="480" />
        <Setter Property="h:Cattach.Icon" Value="&#xe79c;" />
        <Setter Property="ShowInTaskbar" Value="True" />
        <Setter Property="Background" Value="{DynamicResource {x:Static h:BrushKeys.Dark0_3}}" />
        <Setter Property="h:TransitionService.VisibleActions">
            <Setter.Value>
                <h:TransitionCollection>
                    <h:ScaleTransition />
                </h:TransitionCollection>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MultiLoginWindowBase}">
                    <Grid Name="g_all">
                        <Border x:Name="BgInner"
                                Margin="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding h:Cattach.CornerRadius}"
                                Effect="{DynamicResource {x:Static h:EffectShadowKeys.Window}}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                            <Grid Margin="-0.5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="260" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Border Background="{TemplateBinding CaptionBackground}" CornerRadius="{DynamicResource {x:Static h:CornerRadiusKeys.Left}}">
                                    <ContentPresenter Content="{TemplateBinding IntroductionContent}" />
                                </Border>

                                <Border Grid.ColumnSpan="2" Height="{TemplateBinding CaptionHeight}" VerticalAlignment="Top">
                                    <Grid Margin="2,1,2,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Grid x:Name="PART_Header"
                                              Grid.ColumnSpan="3"
                                              Height="{TemplateBinding CaptionHeight}"
                                              Margin="15,1,15,1"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch">
                                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
                                                <TextBlock FontSize="{TemplateBinding IconSize}"
                                                           FontWeight="Bold"
                                                           Foreground="{TemplateBinding CaptionForeground}"
                                                           Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                                           Text="{TemplateBinding Icon}" />

                                                <TextBlock Margin="5"
                                                           VerticalAlignment="Center"
                                                           FontSize="{DynamicResource {x:Static h:FontSizeKeys.Header}}"
                                                           Foreground="{TemplateBinding CaptionForeground}"
                                                           Text="{TemplateBinding Title}" />
                                            </StackPanel>

                                            <Image Margin="0,40"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Source="{TemplateBinding Logo}" />
                                        </Grid>

                                        <StackPanel Grid.Column="3"
                                                    Height="{TemplateBinding CaptionHeight}"
                                                    Margin="1"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Orientation="Horizontal"
                                                    WindowChrome.IsHitTestVisibleInChrome="True">

                                            <Button Foreground="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Foreground}" Style="{DynamicResource {x:Static h:ButtonKeys.MinimizeWindow}}" />

                                            <Button Foreground="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Foreground}" Style="{DynamicResource {x:Static h:ButtonKeys.CloseWindow}}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <AdornerDecorator Grid.Row="1"
                                                  Grid.Column="1"
                                                  Margin="0"
                                                  ClipToBounds="True">

                                    <Grid>
                                        <!--  登录  -->
                                        <DockPanel Margin="80,0" h:TransitionService.IsBeginVisible="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsLoginPage}">
                                            <h:TransitionService.VisibleActions>
                                                <h:TransitionCollection>
                                                    <h:TranslateTransition EndOpacity="0"
                                                                           FillBehavior="HoldEnd"
                                                                           StartOpacity="0"
                                                                           StartPoint="-400 0"
                                                                           EndPoint="-400 0" />
                                                </h:TransitionCollection>
                                            </h:TransitionService.VisibleActions>

                                            <UniformGrid Height="120"
                                                         Background="Transparent"
                                                         DockPanel.Dock="Top"
                                                         Rows="1">
                                                <RadioButton x:Name="radio_login"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Bottom"
                                                             h:Cattach.CheckedIcon=""
                                                             h:Cattach.UncheckedIcon=""
                                                             Content="账号登录"
                                                             FontSize="{StaticResource {x:Static h:FontSizeKeys.Header1}}"
                                                             IsChecked="True" />

                                                <RadioButton x:Name="radio_scan"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Bottom"
                                                             h:Cattach.CheckedIcon=""
                                                             h:Cattach.UncheckedIcon=""
                                                             Content="扫一扫"
                                                             FontSize="{StaticResource {x:Static h:FontSizeKeys.Header1}}" />
                                            </UniformGrid>

                                            <Grid HorizontalAlignment="Center" Background="Transparent" DockPanel.Dock="Top">

                                                <Line Margin="0,5"
                                                      DockPanel.Dock="Top"
                                                      Stroke="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                                                      StrokeThickness="2"
                                                      X1="0" X2="250" />

                                                <Line Width="250"
                                                      Margin="0,5"
                                                      HorizontalAlignment="Center"
                                                      h:TransitionService.IsBeginVisible="{Binding ElementName=radio_login, Path=IsChecked}"
                                                      DockPanel.Dock="Top"
                                                      Stroke="{DynamicResource {x:Static h:BrushKeys.Accent}}"
                                                      StrokeThickness="2"
                                                      X1="0" X2="120">
                                                    <h:TransitionService.VisibleActions>
                                                        <h:TransitionCollection>
                                                            <h:TranslateTransition EndOpacity="1"
                                                                                   FillBehavior="HoldEnd"
                                                                                   HiddenOrCollapsed="Visible"
                                                                                   StartOpacity="1"
                                                                                   StartPoint="150 0"
                                                                                   EndPoint="150 0" />
                                                        </h:TransitionCollection>
                                                    </h:TransitionService.VisibleActions>
                                                </Line>
                                            </Grid>

                                            <Button Margin="20"
                                                    Content="立即注册"
                                                    DockPanel.Dock="Bottom"
                                                    Foreground="{DynamicResource {x:Static h:BrushKeys.Accent}}"
                                                    Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}">
                                                <h:Interaction.Triggers>
                                                    <h:EventTrigger EventName="Click">
                                                        <h:ChangePropertyAction PropertyName="IsLoginPage" TargetObject="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}">
                                                            <h:ChangePropertyAction.Value>
                                                                <system:Boolean>false</system:Boolean>
                                                            </h:ChangePropertyAction.Value>
                                                        </h:ChangePropertyAction>

                                                        <h:ChangePropertyAction PropertyName="IsForgetpassword" TargetObject="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}">
                                                            <h:ChangePropertyAction.Value>
                                                                <system:Boolean>false</system:Boolean>
                                                            </h:ChangePropertyAction.Value>
                                                        </h:ChangePropertyAction>

                                                        <h:CallMethodAction MethodName="ClearRegister" TargetObject="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                                    </h:EventTrigger>
                                                </h:Interaction.Triggers>
                                            </Button>

                                            <Grid>
                                                <!--  账号登录  -->
                                                <Grid Height="200" h:TransitionService.IsBeginVisible="{Binding ElementName=radio_login, Path=IsChecked}">
                                                    <h:TransitionService.VisibleActions>
                                                        <h:TransitionCollection>
                                                            <h:TranslateTransition EndOpacity="0"
                                                                                   FillBehavior="HoldEnd"
                                                                                   StartOpacity="0"
                                                                                   StartPoint="-400 0"
                                                                                   EndPoint="-400 0" />
                                                        </h:TransitionCollection>
                                                    </h:TransitionService.VisibleActions>

                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <!--  用户名  -->
                                                    <TextBox Grid.Row="0"
                                                             Width="Auto"
                                                             Height="{DynamicResource {x:Static h:SystemKeys.RowHeight}}"
                                                             Padding="0"
                                                             h:Cattach.Icon="&#xe88d;"
                                                             h:Cattach.IconMargin="{DynamicResource {x:Static h:ThicknessKeys.Margin_10_0}}"
                                                             h:Cattach.IconSize="14"
                                                             h:Cattach.Watermark="请输入账号"
                                                             FontSize="14"
                                                             Style="{DynamicResource {x:Static h:TextBoxKeys.Clear}}"
                                                             Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=LoginAccount, Mode=TwoWay}" />


                                                    <h:PasswordBox x:Name="bpw_bindpassword"
                                                                   Grid.Row="1"
                                                                   Width="Auto"
                                                                   Height="{DynamicResource {x:Static h:SystemKeys.RowHeight}}"
                                                                   Margin="0"
                                                                   h:Cattach.Icon="&#xe871;"
                                                                   h:Cattach.IconMargin="{DynamicResource {x:Static h:ThicknessKeys.Margin_10_0}}"
                                                                   h:Cattach.IconSize="14"
                                                                   h:Cattach.Watermark="请输入密码"
                                                                   PassWord="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=LoginPassword, Mode=TwoWay}"
                                                                   Style="{DynamicResource {x:Static h:PasswordBox.DefaultKey}}" />

                                                    <CheckBox Grid.Row="2"
                                                              Content="记住密码"
                                                              IsChecked="{Binding Source={x:Static s:IdentifySetting.Instance}, Path=Remember}"
                                                              Style="{DynamicResource {x:Static h:CheckBoxKeys.Dynamic}}" />
                                                    <Button Grid.Row="2"
                                                            HorizontalAlignment="Right"
                                                            Content="忘记密码"
                                                            Foreground="{DynamicResource {x:Static h:BrushKeys.Accent}}"
                                                            Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}">
                                                        <h:Interaction.Triggers>
                                                            <h:EventTrigger EventName="Click">
                                                                <h:ChangePropertyAction PropertyName="IsLoginPage" TargetObject="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}">
                                                                    <h:ChangePropertyAction.Value>
                                                                        <system:Boolean>false</system:Boolean>
                                                                    </h:ChangePropertyAction.Value>
                                                                </h:ChangePropertyAction>
                                                                <h:ChangePropertyAction PropertyName="IsForgetpassword" TargetObject="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}">
                                                                    <h:ChangePropertyAction.Value>
                                                                        <system:Boolean>True</system:Boolean>
                                                                    </h:ChangePropertyAction.Value>
                                                                </h:ChangePropertyAction>

                                                                <h:CallMethodAction MethodName="ClearRegister" TargetObject="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                                            </h:EventTrigger>
                                                        </h:Interaction.Triggers>
                                                    </Button>

                                                    <!--  登录  -->
                                                    <!--<Button Grid.Row="3"
                                                            Width="Auto"
                                                            Height="{DynamicResource {x:Static h:SystemKeys.RowHeight}}"
                                                            h:Cattach.BuzyText="登录中..."
                                                            h:Cattach.IsBuzy="{TemplateBinding IsBuzy}"
                                                            Command="{x:Static local:IdentifyCommands.Login}"
                                                            Content="{TemplateBinding LoginMessage}"
                                                            IsEnabled="{TemplateBinding IsLoginEnbled}"
                                                            ToolTip="{TemplateBinding LoginMessage}" />-->

                                                    <h:ProgressButton x:Name="PART_BUTTON_SUMIT"
                                                                      Grid.Row="3"
                                                                      Width="Auto"
                                                                      Height="{DynamicResource {x:Static h:SystemKeys.RowHeight}}"
                                                                      Command="{x:Static local:IdentifyCommands.Login}"
                                                                      Content="登录"
                                                                      IsBusy="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsBuzy, Mode=TwoWay}"
                                                                      IsIndeterminate="True" />
                                                </Grid>

                                                <!--  扫一扫  -->
                                                <Grid Height="200" h:TransitionService.IsBeginVisible="{Binding ElementName=radio_scan, Path=IsChecked}">
                                                    <h:TransitionService.VisibleActions>
                                                        <h:TransitionCollection>
                                                            <h:TranslateTransition EndOpacity="0"
                                                                                   FillBehavior="HoldEnd"
                                                                                   StartOpacity="0"
                                                                                   StartPoint="400 0"
                                                                                   EndPoint="400 0" />
                                                        </h:TransitionCollection>
                                                    </h:TransitionService.VisibleActions>
                                                    <DockPanel>
                                                        <UniformGrid Columns="1" DockPanel.Dock="Bottom">
                                                            <TextBlock HorizontalAlignment="Center" Text="请使用微信扫一扫" />
                                                        </UniformGrid>

                                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}">
                                                            <TextBlock Margin="20,-5"
                                                                       FontSize="120"
                                                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                                                       Text="&#xe7d7;" />
                                                        </Grid>
                                                    </DockPanel>
                                                </Grid>
                                            </Grid>
                                        </DockPanel>

                                        <!--  注册  -->
                                        <DockPanel Margin="80,0" h:TransitionService.IsBeginVisible="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsLoginPage, Converter={x:Static h:XConverter.TrueToFalseConverter}}" Background="Transparent">
                                            <h:TransitionService.VisibleActions>
                                                <h:TransitionCollection>
                                                    <h:TranslateTransition EndOpacity="0"
                                                                           FillBehavior="HoldEnd"
                                                                           StartOpacity="0"
                                                                           StartPoint="400 0"
                                                                           EndPoint="400 0" />
                                                </h:TransitionCollection>
                                            </h:TransitionService.VisibleActions>

                                            <TextBlock Margin="0,40,0,10"
                                                       HorizontalAlignment="Center"
                                                       DockPanel.Dock="Top"
                                                       FontSize="{StaticResource {x:Static h:FontSizeKeys.Header1}}"
                                                       Text="注册账号" />

                                            <Line Margin="0,5"
                                                  DockPanel.Dock="Top"
                                                  Stroke="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                                                  StrokeThickness="2"
                                                  X1="0" X2="300" />

                                            <StackPanel Margin="0,10,0,0"
                                                        HorizontalAlignment="Center"
                                                        DockPanel.Dock="Top"
                                                        IsHitTestVisible="False"
                                                        Orientation="Horizontal">
                                                <CheckBox Content="确认账号" Foreground="{DynamicResource {x:Static h:BrushKeys.Accent}}">
                                                    <CheckBox.Template>
                                                        <ControlTemplate TargetType="CheckBox">
                                                            <DockPanel>
                                                                <Border Width="25"
                                                                        Height="25"
                                                                        VerticalAlignment="Center"
                                                                        Background="{TemplateBinding Foreground}"
                                                                        CornerRadius="100">
                                                                    <TextBlock HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"
                                                                               Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                                                                               Text="1" />
                                                                </Border>

                                                                <TextBlock Margin="10,0"
                                                                           VerticalAlignment="Center"
                                                                           FontSize="{StaticResource {x:Static h:FontSizeKeys.Header4}}"
                                                                           Text="{TemplateBinding Content}" />
                                                            </DockPanel>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="false">
                                                                    <Setter Property="Opacity" Value="{DynamicResource {x:Static h:OpacityKeys.Disable}}" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </CheckBox.Template>
                                                </CheckBox>

                                                <TextBlock Margin="20,0"
                                                           FontSize="20"
                                                           Opacity="0.6"
                                                           Text="&gt;" />

                                                <CheckBox Content="设置密码" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundDefault}}" IsChecked="{Binding ElementName=cb_password, Path=IsChecked}">
                                                    <CheckBox.Template>
                                                        <ControlTemplate TargetType="CheckBox">
                                                            <DockPanel>
                                                                <Border x:Name="border"
                                                                        Width="25"
                                                                        Height="25"
                                                                        Background="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Foreground}"
                                                                        CornerRadius="100">
                                                                    <TextBlock HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"
                                                                               Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                                                                               Text="2" />
                                                                </Border>

                                                                <TextBlock x:Name="txt"
                                                                           Margin="10,0"
                                                                           VerticalAlignment="Center"
                                                                           FontSize="{StaticResource {x:Static h:FontSizeKeys.Header4}}"
                                                                           Text="{TemplateBinding Content}" />
                                                            </DockPanel>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="false">
                                                                    <Setter Property="Opacity" Value="{DynamicResource {x:Static h:OpacityKeys.Disable}}" />
                                                                </Trigger>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=h:MultiLoginWindowBase}, Path=IsNextPage}" Value="true">
                                                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource {x:Static h:BrushKeys.Accent}}" />
                                                                    <Setter TargetName="txt" Property="Foreground" Value="{DynamicResource {x:Static h:BrushKeys.Accent}}" />
                                                                </DataTrigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </CheckBox.Template>
                                                </CheckBox>
                                            </StackPanel>

                                            <Button Margin="0,0,0,10"
                                                    Content="直接登录"
                                                    DockPanel.Dock="Bottom"
                                                    Foreground="{DynamicResource {x:Static h:BrushKeys.Accent}}"
                                                    Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}">
                                                <h:Interaction.Triggers>
                                                    <h:EventTrigger EventName="Click">
                                                        <h:ChangePropertyAction PropertyName="IsLoginPage" TargetObject="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}">
                                                            <h:ChangePropertyAction.Value>
                                                                <system:Boolean>True</system:Boolean>
                                                            </h:ChangePropertyAction.Value>
                                                        </h:ChangePropertyAction>
                                                    </h:EventTrigger>
                                                </h:Interaction.Triggers>
                                            </Button>

                                            <DockPanel>
                                                <CheckBox DockPanel.Dock="Bottom"
                                                          FontSize="{DynamicResource {x:Static h:FontSizeKeys.Header7}}"
                                                          IsChecked="{TemplateBinding IsAgree}"
                                                          Visibility="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsForgetpassword, Converter={x:Static h:XConverter.FalseToVisibilityConverter}}">
                                                    <CheckBox.Content>
                                                        <DockPanel LastChildFill="False">
                                                            <TextBlock>
                                                                <Run Text="我已阅读并同意" />
                                                                <Hyperlink Command="{x:Static local:IdentifyCommands.ServiceAgreement}">
                                                                    <TextBlock Text="服务协议" />
                                                                </Hyperlink>
                                                                <Run Text="和" />
                                                                <Hyperlink Command="{x:Static local:IdentifyCommands.Privacypolicy}">
                                                                    <TextBlock Text="隐私政策" />
                                                                </Hyperlink>
                                                            </TextBlock>
                                                        </DockPanel>
                                                    </CheckBox.Content>
                                                </CheckBox>

                                                <TextBlock Margin="0,-20,0,10"
                                                           HorizontalAlignment="Center"
                                                           DockPanel.Dock="Bottom"
                                                           FontSize="{StaticResource {x:Static h:FontSizeKeys.Header5}}"
                                                           Foreground="{DynamicResource {x:Static h:BrushKeys.Red}}"
                                                           Text="{TemplateBinding RegistorErrorMessage}" />

                                                <Grid>
                                                    <!--  下一步  -->
                                                    <Grid Height="200" h:TransitionService.IsBeginVisible="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsNextPage, Converter={x:Static h:XConverter.TrueToFalseConverter}}">
                                                        <h:TransitionService.VisibleActions>
                                                            <h:TransitionCollection>
                                                                <h:TranslateTransition EndOpacity="0"
                                                                                       FillBehavior="HoldEnd"
                                                                                       StartOpacity="0"
                                                                                       StartPoint="-400 0"
                                                                                       EndPoint="-400 0" />
                                                            </h:TransitionCollection>
                                                        </h:TransitionService.VisibleActions>

                                                        <Grid.RowDefinitions>
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                        </Grid.RowDefinitions>

                                                        <TextBox Grid.Row="0"
                                                                 Width="Auto"
                                                                 Height="{DynamicResource {x:Static h:SystemKeys.RowHeight}}"
                                                                 h:Cattach.Icon="&#xe73a;"
                                                                 h:Cattach.IconMargin="5"
                                                                 h:Cattach.IconSize="24"
                                                                 h:Cattach.IsUseHistory="False"
                                                                 h:Cattach.Watermark="手机号"
                                                                 FontSize="14"
                                                                 Style="{DynamicResource {x:Static h:TextBoxKeys.Clear}}"
                                                                 Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Phone, Mode=TwoWay}" />

                                                        <TextBox Grid.Row="1"
                                                                 Width="Auto"
                                                                 Height="{DynamicResource {x:Static h:SystemKeys.RowHeight}}"
                                                                 h:Cattach.Icon=""
                                                                 h:Cattach.IconMargin="5"
                                                                 h:Cattach.IconSize="14"
                                                                 h:Cattach.IsUseHistory="False"
                                                                 h:Cattach.Watermark="请输入验证码"
                                                                 FontSize="14"
                                                                 Style="{DynamicResource {x:Static h:TextBoxKeys.Clear}}"
                                                                 Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=InputVerificationCode}">
                                                            <h:Cattach.AttachContent>
                                                                <ControlTemplate>
                                                                    <Border Margin="2" Padding="10,6" Background="{DynamicResource {x:Static h:BrushKeys.AccentMouseOverBackground}}">
                                                                        <Button Command="{x:Static local:IdentifyCommands.VerificationCode}" Content="{Binding RelativeSource={RelativeSource AncestorType=local:MultiLoginWindowBase}, Path=VerificationCode}" Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" />
                                                                        <!--<TextBlock Text="{TemplateBinding VerificationCode}"  Foreground="{DynamicResource {x:Static h:BrushKeys.AccentMouseOverForeground}}"/>-->
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </h:Cattach.AttachContent>
                                                        </TextBox>


                                                        <TextBox Grid.Row="2"
                                                                 Width="Auto"
                                                                 Height="{DynamicResource {x:Static h:SystemKeys.RowHeight}}"
                                                                 h:Cattach.Icon="&#xe7dd;"
                                                                 h:Cattach.IconMargin="5"
                                                                 h:Cattach.IconSize="18"
                                                                 h:Cattach.IsUseHistory="False"
                                                                 h:Cattach.Watermark="验证码"
                                                                 FontSize="14"
                                                                 Style="{DynamicResource {x:Static h:TextBoxKeys.Clear}}"
                                                                 Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=InputPhoneVerificationCode}">
                                                            <h:Cattach.AttachContent>
                                                                <ControlTemplate>
                                                                    <DockPanel>
                                                                        <Separator Margin="0,8" Style="{DynamicResource {x:Static h:SeparatorKeys.Vertical}}" />

                                                                        <Button Command="{x:Static local:IdentifyCommands.PhoneVerificationCode}"
                                                                                Content="获取验证码"
                                                                                Foreground="{DynamicResource {x:Static h:BrushKeys.AccentMouseOverForeground}}"
                                                                                Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" />
                                                                    </DockPanel>

                                                                </ControlTemplate>
                                                            </h:Cattach.AttachContent>
                                                        </TextBox>

                                                        <!--  下一步  -->
                                                        <Button Grid.Row="3"
                                                                Width="Auto"
                                                                Height="{DynamicResource {x:Static h:SystemKeys.RowHeight}}"
                                                                Command="{x:Static local:IdentifyCommands.NextPage}"
                                                                Content="下一步" />

                                                    </Grid>

                                                    <!--  确认  -->
                                                    <Grid Height="200" h:TransitionService.IsBeginVisible="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsNextPage}">
                                                        <Grid.Resources>
                                                            <x:Array x:Key="S.Array.DisplayMap" Type="{x:Type h:DisplayMap}">
                                                                <h:DisplayMap Value="重置">
                                                                    <h:DisplayMap.Key>
                                                                        <system:Boolean>True</system:Boolean>
                                                                    </h:DisplayMap.Key>
                                                                </h:DisplayMap>
                                                                <h:DisplayMap Value="注册">
                                                                    <h:DisplayMap.Key>
                                                                        <system:Boolean>False</system:Boolean>
                                                                    </h:DisplayMap.Key>
                                                                </h:DisplayMap>
                                                            </x:Array>
                                                        </Grid.Resources>
                                                        <h:TransitionService.VisibleActions>
                                                            <h:TransitionCollection>
                                                                <h:TranslateTransition EndOpacity="0"
                                                                                       FillBehavior="HoldEnd"
                                                                                       StartOpacity="0"
                                                                                       StartPoint="400 0"
                                                                                       EndPoint="400 0" />
                                                            </h:TransitionCollection>
                                                        </h:TransitionService.VisibleActions>

                                                        <Grid.RowDefinitions>
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                        </Grid.RowDefinitions>

                                                        <h:PasswordBox Grid.Row="0"
                                                                       Width="Auto"
                                                                       Height="{DynamicResource {x:Static h:SystemKeys.RowHeight}}"
                                                                       Margin="0"
                                                                       h:Cattach.Icon="&#xe613;"
                                                                       h:Cattach.IconMargin="5"
                                                                       h:Cattach.IconSize="14"
                                                                       h:Cattach.Watermark="请输入密码"
                                                                       PassWord="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=RegisterPassword, Mode=TwoWay}"
                                                                       Style="{DynamicResource {x:Static h:PasswordBox.DefaultKey}}" />

                                                        <h:PasswordBox Grid.Row="1"
                                                                       Width="Auto"
                                                                       Height="{DynamicResource {x:Static h:SystemKeys.RowHeight}}"
                                                                       Margin="0"
                                                                       h:Cattach.Icon="&#xe909;"
                                                                       h:Cattach.IconMargin="5"
                                                                       h:Cattach.IconSize="14"
                                                                       h:Cattach.Watermark="再次输入密码"
                                                                       PassWord="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Verifypassword, Mode=TwoWay}"
                                                                       Style="{DynamicResource {x:Static h:PasswordBox.DefaultKey}}" />

                                                        <!--  下一步  -->
                                                        <Button Grid.Row="2"
                                                                Width="Auto"
                                                                Height="{DynamicResource {x:Static h:SystemKeys.RowHeight}}"
                                                                Content="上一步">
                                                            <h:Interaction.Triggers>
                                                                <h:EventTrigger EventName="Click">
                                                                    <h:ChangePropertyAction PropertyName="IsNextPage" TargetObject="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}">
                                                                        <h:ChangePropertyAction.Value>
                                                                            <system:Boolean>false</system:Boolean>
                                                                        </h:ChangePropertyAction.Value>
                                                                    </h:ChangePropertyAction>
                                                                </h:EventTrigger>
                                                            </h:Interaction.Triggers>
                                                        </Button>

                                                        <!--  确认  -->
                                                        <Button Grid.Row="3"
                                                                Width="Auto"
                                                                Height="{DynamicResource {x:Static h:SystemKeys.RowHeight}}"
                                                                h:Cattach.BuzyText="执行中..."
                                                                h:Cattach.IsBuzy="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsBuzy}"
                                                                Command="{x:Static local:IdentifyCommands.Register}"
                                                                Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsForgetpassword, Converter={x:Static h:XConverter.DisplayMapConverter}, ConverterParameter={StaticResource S.Array.DisplayMap}}" />

                                                    </Grid>
                                                </Grid>
                                            </DockPanel>
                                        </DockPanel>
                                    </Grid>

                                </AdornerDecorator>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource {x:Static h:MultiLoginWindowBase.DefaultKey}}" TargetType="{x:Type local:MultiLoginWindowBase}" />

