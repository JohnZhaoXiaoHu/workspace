<UserControl x:Class="HeBianGu.Systems.Setting.SettingDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.Systems.Setting"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <h:Dialog Style="{DynamicResource {x:Static h:Dialog.DispalyKey}}">
        <DockPanel>
            <DockPanel Margin="0,5,0,0"
                       Background="Transparent"
                       DockPanel.Dock="Bottom"
                       LastChildFill="False">

                <Button Margin="0"
                        Content="恢复默认"
                        BorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                        Click="Button_SetDefault"
                        DockPanel.Dock="Left"
                        Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" />

                <Button Margin="10,0"
                        Content="初始化配置(重启以生效)"
                        BorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                        Command="{Binding Source={x:Static h:SystemPathSetting.Instance}, Path=ClearSettingCommand}"
                        DockPanel.Dock="Left"
                        Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" />


                <Button MinWidth="100"
                        Margin="2,0"
                        h:Cattach.GuideData="点击此按钮将取消本次修改的数据"
                        h:Cattach.UseGuide="True"
                        Click="Button_Sumit"
                        Content="应用"
                        DockPanel.Dock="Right" />

                <Button MinWidth="100"
                        Margin="2,0"
                        h:Cattach.GuideData="点击此按钮将取消本次修改的数据"
                        h:Cattach.UseGuide="True"
                        Click="Button_Close"
                        Content="取消"
                        DockPanel.Dock="Right" />
            </DockPanel>

            <local:SettingBox />
        </DockPanel>
    </h:Dialog>
</UserControl>
