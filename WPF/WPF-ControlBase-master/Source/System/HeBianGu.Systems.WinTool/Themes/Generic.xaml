                        Style="{DynamicResource {x:Static h:ButtonKeys.CloseFlag}}" />
            </Grid>
            <Popup HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   AllowsTransparency="True"
                   IsOpen="{Binding ElementName=tb, Path=IsChecked}"
