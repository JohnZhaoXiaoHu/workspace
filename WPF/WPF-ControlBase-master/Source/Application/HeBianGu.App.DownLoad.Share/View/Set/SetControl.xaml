                           HitTestPoint="55 10"
                           ItemsSource="{Binding}"
                           NavigationSource="{Binding}"
                           ScrollViewer.CanContentScroll="False">
            <h:ScrollIntoItems.NavigationDataTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </h:ScrollIntoItems.NavigationDataTemplate>

