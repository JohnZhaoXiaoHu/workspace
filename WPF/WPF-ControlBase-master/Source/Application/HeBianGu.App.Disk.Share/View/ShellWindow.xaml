<h:LinkWindowBase x:Class="HeBianGu.App.Disk.ShellWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:h="https://github.com/HeBianGu"
                  xmlns:local="clr-namespace:HeBianGu.App.Disk"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  Title="ShellWindow"
                  Width="1266"
                  Height="720"
                  BorderBrush="Transparent"
                  Style="{DynamicResource {x:Static h:LinkWindowBase.DiskKey}}"
                  mc:Ignorable="d">
    <!--<h:Cattach.RightTemplate>
        <ControlTemplate>
            <Grid Width="200" Background="Purple" />
        </ControlTemplate>
    </h:Cattach.RightTemplate>-->
    <h:Cattach.CaptionRightTemplate>
        <ControlTemplate TargetType="Control">
            <Button h:Cattach.Icon="{x:Static h:Icons.Add}" Style="{DynamicResource {x:Static h:ButtonKeys.Icon}}" />
        </ControlTemplate>
    </h:Cattach.CaptionRightTemplate>
    <h:LinkWindowBase.Logo>
        <BitmapImage UriSource="/HeBianGu.General.WpfControlLib;component/Resources/logo.png" />
    </h:LinkWindowBase.Logo>

    <h:LinkWindowBase.Links>
        <h:LinkAction Action="Home"
                      Controller="Loyout"
                      DisplayName="我的网盘"
                      Logo="{x:Null}" />
        <h:LinkAction Action="Send" Controller="Send" DisplayName="传输列表" />
        <h:LinkAction Action="Friend" Controller="Friend" DisplayName="好友分享" />
        <h:LinkAction Action="Extend" Controller="Extend" DisplayName="功能宝箱" />
        <h:LinkAction Action="Custom" Controller="Custom" DisplayName="找资源" />
    </h:LinkWindowBase.Links>
</h:LinkWindowBase>
