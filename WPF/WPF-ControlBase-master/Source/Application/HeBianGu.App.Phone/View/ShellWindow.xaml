<h:PhoneWindowBase x:Class="HeBianGu.App.Phone.ShellWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:h="https://github.com/HeBianGu"
                   xmlns:local="clr-namespace:HeBianGu.App.Phone"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   Title="个人所得税"
                   Width="350"
                   Height="700"
                   NotifyIconSource="/HeBianGu.General.WpfControlLib;component/Resources/iBook.ico"
                   mc:Ignorable="d">

    <h:PhoneWindowBase.Logo>
        <BitmapImage UriSource="/HeBianGu.General.WpfControlLib;component/Resources/logo.png" />
    </h:PhoneWindowBase.Logo>

    <h:PhoneWindowBase.CustomContent>
        <StackPanel Margin="10,0" Orientation="Horizontal">
            <Button h:Cattach.Icon="&#xe7fd;" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" />
            <Button h:Cattach.Icon="&#xe7fd;" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" />
            <Button h:Cattach.Icon="&#xe7fd;" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" />
        </StackPanel>
    </h:PhoneWindowBase.CustomContent>

    <h:PhoneWindowBase.Links>
        <h:LinkAction Action="Home"
                      Controller="Loyout"
                      DisplayName="首页"
                      Logo="&#xe7fd;" />
        <h:LinkAction Action="Home"
                      Controller="Custom"
                      DisplayName="办税"
                      Logo="&#xe7fd;" />
        <h:LinkAction Action="Home"
                      Controller="Service"
                      DisplayName="服务"
                      Logo="&#xe7fd;" />
        <h:LinkAction Action="Home"
                      Controller="Personal"
                      DisplayName="个人中心"
                      Logo="&#xe7fd;" />
    </h:PhoneWindowBase.Links>
</h:PhoneWindowBase>
