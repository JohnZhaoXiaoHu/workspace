                      Controller="Loyout"
                      DisplayName="所有程序"
                      Logo="&#xe7fd;" />
        <h:LinkAction Action="Custom"
                      Controller="Custom"
                      DisplayName="最近文档"
                      Logo="&#xe7fd;" />
        <h:LinkAction Action="Home"
                      Controller="Loyout"
                      DisplayName="集成工具"
                      Logo="&#xe7fd;" />
        <h:LinkAction Action="Custom"
                      Controller="Custom"
                      DisplayName="批处理"
                      Logo="&#xe7fd;" />
        <h:LinkAction Action="Home"
