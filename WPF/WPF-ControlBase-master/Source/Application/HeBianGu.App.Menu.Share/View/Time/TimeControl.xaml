<UserControl x:Class="HeBianGu.App.Menu.View.Time.TimeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.App.Menu.View.Time"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Background="Transparent">
        <h:LinkActionsContianer Style="{DynamicResource {x:Static h:LinkActionsContianer.SingleKey}}">
            <h:LinkActionCollection>
                <h:LinkAction Action="TimeUniform"
                              Controller="Time"
                              DisplayName="Uniform"
                              Logo="&#xe827;" />
                <h:LinkAction Action="TimeStack"
                              Controller="Time"
                              DisplayName="StackPanel"
                              Logo="&#xe836;" />
                <h:LinkAction Action="TimeHStack"
                              Controller="Time"
                              DisplayName="StackPanel Horizontal"
                              Logo="&#xe837;" />

                <h:LinkAction Action="TimeBack"
                              Controller="Time"
                              DisplayName="收回动画"
                              Logo="&#xe77e;" />
                <h:LinkAction Action="TimeElastic"
                              Controller="Time"
                              DisplayName="振动动画"
                              Logo="&#xe908;" />
                <h:LinkAction Action="TimeBounce"
                              Controller="Time"
                              DisplayName="弹跳动画"
                              Logo="&#xe851;" />
            </h:LinkActionCollection>
        </h:LinkActionsContianer>
    </Grid>
</UserControl>
