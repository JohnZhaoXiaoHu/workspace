<UserControl x:Class="HeBianGu.App.Menu.View.Text.TextBaseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.App.Menu.View.Text"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:s="clr-namespace:System;assembly=System"
             xmlns:s1="clr-namespace:System;assembly=mscorlib"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <ScrollViewer>
        <UniformGrid Columns="1">
            <UniformGrid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="RenderTransformOrigin" Value="0.5 0.5" />
                    <Setter Property="RenderTransform" Value="{DynamicResource {x:Static h:SystemKeys.TransformGroup}}" />
                </Style>
                <s1:String x:Key="SSSSS">我是一行跑马灯效果</s1:String>
                <Style TargetType="ItemsControl">
                    <Setter Property="ItemsSource" Value="{StaticResource SSSSS}" />
                    <Setter Property="ItemsPanel">
                        <Setter.Value>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </UniformGrid.Resources>
            <GroupBox Header="放大">
                <ItemsControl>
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction IsUseAll="True" AutoReverse="True" RepeatBehavior="Forever" SplitMilliSecond="-700">


                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />


                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>
                </ItemsControl>
            </GroupBox>

            <GroupBox Header="缩小">
                <ItemsControl>
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction IsUseAll="True" AutoReverse="True" RepeatBehavior="Forever" SplitMilliSecond="-700">


                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 From="5" To="1"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 From="5" To="1"
                                                 Duration="00:00:01" />

                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />



                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>
                </ItemsControl>
            </GroupBox>


            <GroupBox Header="左移">
                <ItemsControl>
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction IsUseAll="True" AutoReverse="True" RepeatBehavior="Forever" SplitMilliSecond="-700">


                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                                 From="300" To="0"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />


                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>
                </ItemsControl>
            </GroupBox>

            <GroupBox Header="下移">
                <ItemsControl>
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction IsUseAll="True" AutoReverse="True" RepeatBehavior="Forever" SplitMilliSecond="-700">


                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)"
                                                 From="-100" To="0"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />


                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>
                </ItemsControl>
            </GroupBox>

            <GroupBox Header="平移">
                <ItemsControl>
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction IsUseAll="True" AutoReverse="True" RepeatBehavior="Forever" SplitMilliSecond="-700">


                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                                 From="800" To="0"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)"
                                                 From="800" To="0"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />


                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>
                </ItemsControl>
            </GroupBox>

            <GroupBox Header="透明度">
                <ItemsControl>
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction IsUseAll="True" AutoReverse="True" RepeatBehavior="Forever" SplitMilliSecond="-700">


                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />


                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>
                </ItemsControl>
            </GroupBox>
            <GroupBox Header="旋转">
                <ItemsControl>
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction IsUseAll="True" AutoReverse="True" RepeatBehavior="Forever" SplitMilliSecond="-700">


                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                                                 From="720" To="0"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />


                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>
                </ItemsControl>

















            </GroupBox>

            <GroupBox Header="旋转/放大">


                <ItemsControl>
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction IsUseAll="True" AutoReverse="True" RepeatBehavior="Forever" SplitMilliSecond="-700">


                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                                                 From="720" To="0"
                                                 Duration="00:00:01" />


                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>
                </ItemsControl>

















            </GroupBox>

            <GroupBox Header="旋转/放大/左移">


                <ItemsControl>
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction IsUseAll="True" AutoReverse="True" RepeatBehavior="Forever" SplitMilliSecond="-700">


                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                                                 From="720" To="0"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                                 From="300" To="0"
                                                 Duration="00:00:01" />


                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>
                </ItemsControl>

















            </GroupBox>

            <GroupBox Header="放大/左移">


                <ItemsControl>
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction IsUseAll="True" AutoReverse="True" RepeatBehavior="Forever" SplitMilliSecond="-700">


                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                                 From="300" To="0"
                                                 Duration="00:00:01" />


                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>
                </ItemsControl>

















            </GroupBox>

            <GroupBox Header="旋转/左移">


                <ItemsControl>
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction IsUseAll="True" AutoReverse="True" RepeatBehavior="Forever" SplitMilliSecond="-700">


                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                                                 From="720" To="0"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                                 From="300" To="0"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />


                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>
                </ItemsControl>

















            </GroupBox>

            <GroupBox Header="变形/AngleX">


                <ItemsControl>
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction IsUseAll="True" AutoReverse="True" RepeatBehavior="Forever" SplitMilliSecond="-700">


                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(SkewTransform.AngleX)"
                                                 From="90" To="0"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />


                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>
                </ItemsControl>

















            </GroupBox>

            <GroupBox Header="变形/AngleY">


                <ItemsControl>
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction IsUseAll="True" AutoReverse="True" RepeatBehavior="Forever" SplitMilliSecond="-700">


                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)"
                                                 From="100" To="0"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(SkewTransform.AngleY)"
                                                 From="50" To="0"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />


                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>
                </ItemsControl>

















            </GroupBox>

            <GroupBox Header="变形/平移">


                <ItemsControl>
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction IsUseAll="True" AutoReverse="True" RepeatBehavior="Forever" SplitMilliSecond="-700">


                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                                 From="300" To="0"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(SkewTransform.AngleX)"
                                                 From="90" To="0"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />


                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>
                </ItemsControl>

















            </GroupBox>
        </UniformGrid>


    </ScrollViewer>
</UserControl>
