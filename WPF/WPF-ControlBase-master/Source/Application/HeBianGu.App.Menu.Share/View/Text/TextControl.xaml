<UserControl x:Class="HeBianGu.App.Menu.Text.TextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.App.Menu.Text" xmlns:h="https://github.com/HeBianGu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Transparent">
        <h:LinkActionsContianer Style="{DynamicResource {x:Static h:LinkActionsContianer.SingleKey}}">
            <h:LinkActionCollection>
                <h:LinkAction Action="TextBase"
                              Controller="Text"
                              DisplayName="文本"
                              Logo="&#xe827;" />

                <h:LinkAction Action="TextBack"
                              Controller="Text"
                              DisplayName="收回动画"
                              Logo="&#xe77e;" />
                <h:LinkAction Action="TextElastic"
                              Controller="Text"
                              DisplayName="振动动画"
                              Logo="&#xe908;" />
                <h:LinkAction Action="TextBounce"
                              Controller="Text"
                              DisplayName="弹跳动画"
                              Logo="&#xe851;" />
                <h:LinkAction Action="TextRandomIndex"
                              Controller="Text"
                              DisplayName="索引随机"
                              Logo="&#xe851;" />

                <h:LinkAction Action="TextRandom"
                              Controller="Text"
                              DisplayName="随机"
                              Logo="&#xe851;" />

                <h:LinkAction Action="TextRandomBack"
                              Controller="Text"
                              DisplayName="随机收回"
                              Logo="&#xe851;" />

                <h:LinkAction Action="TextRandomBounce"
                              Controller="Text"
                              DisplayName="随机弹跳"
                              Logo="&#xe851;" />

                <h:LinkAction Action="TextRandomElastic"
                              Controller="Text"
                              DisplayName="随机震动"
                              Logo="&#xe851;" />
            </h:LinkActionCollection>
        </h:LinkActionsContianer>
    </Grid>
</UserControl>
