<Page x:Class="WpfControlDemo.View.ToggleButtonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:h="https://github.com/HeBianGu"
      xmlns:local="clr-namespace:WpfControlDemo.View"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="ToggleButtonPage"
      d:DesignHeight="1000"
      d:DesignWidth="1000"
      mc:Ignorable="d">

    <Grid>
        <GroupBox Header="ToggleButton">
            <StackPanel>
                <h:SwitchToggleButton Margin="10" Content="关闭禁用" IsEnabled="False" />
                <h:SwitchToggleButton Margin="10"
                                      Content="打开禁用"
                                      IsChecked="true"
                                      IsEnabled="False" />
                <h:SwitchToggleButton Margin="10"
                                      Content="可以修改对齐方式"
                                      IsChecked="true"
                                      TextHorizontalAlignment="Right" />
                <h:SwitchToggleButton x:Name="ts"
                                      Margin="10"
                                      Content="特殊动画"
                                      CornerRadius="100" />
                <h:SwitchToggleButton Margin="10"
                                      BorderCornerRadius="3"
                                      Content="方块模式"
                                      CornerRadius="2" />
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
