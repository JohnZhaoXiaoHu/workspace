                        <GroupBox Header="BooleanAnimationUsingKeyFrames">
                            <CheckBox Content="点击运行关键帧">
                                <CheckBox.Triggers>
                                    <EventTrigger RoutedEvent="CheckBox.Click">
                                        <BeginStoryboard>
                                            <Storyboard Timeline.DesiredFrameRate="{x:Static h:StoryboardSetting.DesiredFrameRate}">
                                                <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsChecked">
                                                    <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True" />
                                                    <DiscreteBooleanKeyFrame KeyTime="0:0:2" Value="False" />
                                                    <DiscreteBooleanKeyFrame KeyTime="0:0:4" Value="True" />
                                                    <DiscreteBooleanKeyFrame KeyTime="0:0:6" Value="False" />
                                                    <DiscreteBooleanKeyFrame KeyTime="0:0:8" Value="True" />
                                                    <DiscreteBooleanKeyFrame KeyTime="0:0:10" Value="False" />
                                                </BooleanAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </CheckBox.Triggers>
                            </CheckBox>
                        </GroupBox>

