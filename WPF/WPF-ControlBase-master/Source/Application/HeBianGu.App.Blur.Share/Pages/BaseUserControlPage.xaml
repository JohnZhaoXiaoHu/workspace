<Page x:Class="WpfControlDemo.View.BaseUserControlPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:h="https://github.com/HeBianGu"
      xmlns:local="clr-namespace:WpfControlDemo.View"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="BaseUserControlPage"
      d:DesignHeight="1000"
      d:DesignWidth="1000"
      mc:Ignorable="d">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*" />
            <RowDefinition Height="53*" />
            <RowDefinition Height="53*" />
        </Grid.RowDefinitions>
        <StackPanel>
            <CheckBox Content="是否显示" IsChecked="{Binding IsShow, Mode=TwoWay}" />
        </StackPanel>
        <!--<h:OpacityVisibleUserControl x:Name="tt" Grid.Row="1"  IsShow="{Binding IsShow,Mode=TwoWay}"/>-->
    </Grid>
</Page>
