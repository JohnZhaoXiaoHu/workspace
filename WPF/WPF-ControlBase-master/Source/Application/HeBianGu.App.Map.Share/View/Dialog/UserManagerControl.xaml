    <DockPanel Margin="20"> 
        <Button Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="-20" DockPanel.Dock="Top"
                HorizontalAlignment="Right"
                Command="{x:Static h:Commander.MessageLayerCloseCommand}"
                IsCancel="True"
                Style="{DynamicResource {x:Static h:ButtonKeys.Close}}">
            <Button.CommandParameter>
                <system:Boolean>False</system:Boolean>
            </Button.CommandParameter>
        </Button>

        <TextBlock Margin="0" DockPanel.Dock="Top"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="25"
                   Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}"
                   Style="{DynamicResource {x:Static h:TextBlockKeys.Default}}"
                   Text="用户管理" />

        <h:PagedDataGrid AutoGenerateColumns="False"
                             BorderThickness="0"
                             DataSource="{StaticResource S.Array.Users}"
                             PageCount="17"
                             UsePageCount="False">
            <h:PagedDataGrid.Columns>
                <DataGridTemplateColumn Width="50">
                    <DataGridTemplateColumn.Header>
                        <CheckBox />
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox Foreground="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Foreground}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Width="*" Binding="{Binding Value}" Header="账号" />
                <DataGridTextColumn Width="*" Binding="{Binding Value1}" Header="密码" />
                <DataGridTextColumn Width="*" Binding="{Binding Value2}" Header="用户名" />
                <DataGridTextColumn Width="*" Binding="{Binding Value3}" Header="角色" />
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.Header>
                        <TextBlock Text="是否启用" />
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox Foreground="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Foreground}" IsChecked="{Binding IsSelected}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Width="1.5*" Binding="{Binding DateTime1}" Header="创建时间" />

                <DataGridTemplateColumn Width="150">
                    <DataGridTemplateColumn.Header>
                        <TextBlock Text="操作" />
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <Button Margin="0,2" Style="{DynamicResource {x:Static h:ButtonKeys.Delete}}" />
                                <Button Margin="2,2" Style="{DynamicResource {x:Static h:ButtonKeys.Edit}}" />
                            </DockPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </h:PagedDataGrid.Columns>

