<UserControl x:Class="HeBianGu.App.Music.View.Layout.LayoutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.App.Music.View.Layout"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid Background="Transparent">
            <ScrollViewer>
                <StackPanel>
                    <h:SelectorHost ContainerStyle="{DynamicResource {x:Static h:HostContianerKeys.BottomKey}}" Duration="00:00:00.5">
                        <h:SelectorHost.HostData>
                            <TextBlock Margin="0,0,0,-10"
                                       FontSize="20"
                                       Foreground="{DynamicResource {x:Static h:BrushKeys.Accent}}"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe634;" />
                        </h:SelectorHost.HostData>
                        <TabControl BorderThickness="0" h:Cattach.GuideData="显示与我相关"
                              h:Cattach.GuideParentTitle="直播"
                              h:Cattach.GuideTitle="与我相关"
                              h:Cattach.UseGuide="True">
                            <TabControl.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <DockPanel Height="400">
                                            <ItemsControl Width="400"
                                                          Height="Auto"
                                                          h:Cattach.ItemHeight="Auto"
                                                          DockPanel.Dock="Right"
                                                          ItemsSource="{h:GetRange Start=1,
                                                                                   Count=18}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Image />
                                                            <TextBlock Margin="10"
                                                                       HorizontalAlignment="Right"
                                                                       VerticalAlignment="Top"
                                                                       FontWeight="Black"
                                                                       Foreground="White"
                                                                       Text="直播" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <UniformGrid Columns="3" Rows="3" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>

                                            <Grid>
                                                <Image />
                                                <TextBlock Margin="10"
                                                           HorizontalAlignment="Right"
                                                           VerticalAlignment="Top"
                                                           FontSize="30"
                                                           FontWeight="Black"
                                                           Foreground="White"
                                                           Text="直播" />
                                            </Grid>
                                        </DockPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </TabControl.ContentTemplate>
                            <h:Cattach.CaptionLeftTemplate>
                                <ControlTemplate>
                                    <TextBlock Margin="20,0"
                                               VerticalAlignment="Center"
                                               FontSize="{DynamicResource {x:Static h:FontSizeKeys.Header3}}"
                                               FontWeight="Black"
                                               Text="与我相关" />
                                </ControlTemplate>
                            </h:Cattach.CaptionLeftTemplate>
                            <TabItem Header="推荐" />

                            <TabItem Header="关注" />

                            <TabItem Header="看过" />

                            <TabItem Header="守护" />

                            <TabItem Header="管理" />
                        </TabControl>
                    </h:SelectorHost>

                    <h:SelectorHost Margin="0,20" ContainerStyle="{DynamicResource {x:Static h:HostContianerKeys.BottomKey}}" Duration="00:00:00.5">
                        <h:SelectorHost.HostData>
                            <TextBlock Margin="0,0,0,-10"
                                       FontSize="20"
                                       Foreground="{DynamicResource {x:Static h:BrushKeys.Accent}}"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe634;" />
                        </h:SelectorHost.HostData>
                        <TabControl BorderThickness="0" h:Cattach.GuideData="显示热门艺人"
                              h:Cattach.GuideParentTitle="直播"
                              h:Cattach.GuideTitle="热门艺人"
                              h:Cattach.UseGuide="True">
                            <TabControl.ContentTemplate>
                                <DataTemplate>
                                    <ItemsControl Height="Auto" h:Cattach.ItemHeight="Auto" ItemsSource="{h:GetRange Start=1, Count=100}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <DockPanel>
                                                    <Border Style="{DynamicResource {x:Static h:BorderKeys.Card}}">
                                                        <Grid>
                                                            <Image />
                                                            <TextBlock Margin="10"
                                                                       HorizontalAlignment="Right"
                                                                       VerticalAlignment="Top"
                                                                       FontWeight="Black"
                                                                       Foreground="White"
                                                                       Text="直播" />
                                                            <TextBlock Margin="10"
                                                                       HorizontalAlignment="Left"
                                                                       VerticalAlignment="Top"
                                                                       FontWeight="Black"
                                                                       Foreground="White"
                                                                       Text="哈尔滨" />
                                                        </Grid>
                                                    </Border>
                                                </DockPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Columns="5" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </DataTemplate>
                            </TabControl.ContentTemplate>
                            <h:Cattach.CaptionLeftTemplate>
                                <ControlTemplate>
                                    <TextBlock Margin="20,0"
                                               VerticalAlignment="Center"
                                               FontSize="{DynamicResource {x:Static h:FontSizeKeys.Header3}}"
                                               FontWeight="Black"
                                               Text="热门艺人" />
                                </ControlTemplate>
                            </h:Cattach.CaptionLeftTemplate>
                            <TabItem Header="猜你喜欢" />

                            <TabItem Header="同城艺人" />

                            <TabItem Header="新秀艺人" />

                            <TabItem Header="游戏主播" />

                            <TabItem Header="颜值主播" />
                        </TabControl>
                    </h:SelectorHost>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
