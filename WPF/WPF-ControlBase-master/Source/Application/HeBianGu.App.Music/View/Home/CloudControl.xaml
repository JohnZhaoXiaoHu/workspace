<UserControl x:Class="HeBianGu.App.Music.View.Home.CloudControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.App.Music.View.Home"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid Background="Transparent">
            <ScrollViewer>
                <StackPanel>
                    <DockPanel Height="200">
                        <Border Width="250"
                                Margin="10"
                                DockPanel.Dock="Right"
                                Style="{DynamicResource {x:Static h:BorderKeys.Card}}">
                            <Grid>
                                <Image />
                                <TextBlock Margin="10"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Top"
                                           FontSize="30"
                                           FontWeight="Black"
                                           Foreground="White"
                                           Text="分类" />
                            </Grid>
                        </Border>
                        <Border Width="250"
                                Margin="10"
                                DockPanel.Dock="Right"
                                Style="{DynamicResource {x:Static h:BorderKeys.Card}}">
                            <Grid>
                                <Image />
                                <TextBlock Margin="10"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Top"
                                           FontSize="30"
                                           FontWeight="Black"
                                           Foreground="White"
                                           Text="歌手" />
                            </Grid>
                        </Border>

                        <Border Margin="10" Style="{DynamicResource {x:Static h:BorderKeys.Card}}">
                            <Grid>
                                <Image />
                                <TextBlock Margin="10"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Top"
                                           FontSize="30"
                                           FontWeight="Black"
                                           Foreground="White"
                                           Text="排行榜" />
                            </Grid>
                        </Border>
                    </DockPanel>

                    <h:SelectorHost ContainerStyle="{DynamicResource {x:Static h:HostContianerKeys.BottomKey}}" Duration="00:00:00.5">
                        <h:SelectorHost.HostData>
                            <TextBlock Margin="0,0,0,-10"
                                       FontSize="20"
                                       Foreground="{DynamicResource {x:Static h:BrushKeys.Accent}}"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe634;" />
                        </h:SelectorHost.HostData>
                        <TabControl>
                            <h:Cattach.CaptionLeftTemplate>
                                <ControlTemplate>
                                    <TextBlock Margin="20,0"
                                               VerticalAlignment="Center"
                                               FontSize="{DynamicResource {x:Static h:FontSizeKeys.Header3}}"
                                               FontWeight="Black"
                                               Text="今日专属推荐" />
                                </ControlTemplate>
                            </h:Cattach.CaptionLeftTemplate>
                            <TabItem Header="华语">
                                <ListBox Height="Auto" h:Cattach.ItemHeight="Auto" ItemsSource="{h:GetRange Start=1, Count=18}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <DockPanel>
                                                <Border Width="100"
                                                        Height="100"
                                                        DockPanel.Dock="Left"
                                                        Style="{DynamicResource {x:Static h:BorderKeys.Card}}">
                                                    <Image />
                                                </Border>
                                                <UniformGrid Margin="10,15" VerticalAlignment="Top" Columns="1">
                                                    <TextBlock FontSize="15" Text="大时代" TextWrapping="Wrap" />
                                                    <TextBlock Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundAssist}}" Text="时代少年团" TextWrapping="Wrap" />
                                                </UniformGrid>
                                            </DockPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="3" Rows="3" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                </ListBox>
                            </TabItem>
                            <TabItem Header="欧美">
                                <ListBox Height="Auto" h:Cattach.ItemHeight="Auto" ItemsSource="{h:GetRange Start=1, Count=18}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <DockPanel>
                                                <Border Width="100"
                                                        Height="100"
                                                        DockPanel.Dock="Left"
                                                        Style="{DynamicResource {x:Static h:BorderKeys.Card}}">
                                                    <Image />
                                                </Border>
                                                <UniformGrid Margin="10,15" VerticalAlignment="Top" Columns="1">
                                                    <TextBlock FontSize="15" Text="大时代" TextWrapping="Wrap" />
                                                    <TextBlock Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundAssist}}" Text="时代少年团" TextWrapping="Wrap" />
                                                </UniformGrid>
                                            </DockPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="3" Rows="3" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                </ListBox>
                            </TabItem>

                            <TabItem Header="韩国">
                                <ListBox Height="Auto" h:Cattach.ItemHeight="Auto" ItemsSource="{h:GetRange Start=1, Count=18}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <DockPanel>
                                                <Border Width="100"
                                                        Height="100"
                                                        DockPanel.Dock="Left"
                                                        Style="{DynamicResource {x:Static h:BorderKeys.Card}}">
                                                    <Image />
                                                </Border>
                                                <UniformGrid Margin="10,15" VerticalAlignment="Top" Columns="1">
                                                    <TextBlock FontSize="15" Text="大时代" TextWrapping="Wrap" />
                                                    <TextBlock Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundAssist}}" Text="时代少年团" TextWrapping="Wrap" />
                                                </UniformGrid>
                                            </DockPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="3" Rows="3" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                </ListBox>
                            </TabItem>

                            <TabItem Header="日本">
                                <ListBox Height="Auto" h:Cattach.ItemHeight="Auto" ItemsSource="{h:GetRange Start=1, Count=18}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <DockPanel>
                                                <Border Width="100"
                                                        Height="100"
                                                        DockPanel.Dock="Left"
                                                        Style="{DynamicResource {x:Static h:BorderKeys.Card}}">
                                                    <Image />
                                                </Border>
                                                <UniformGrid Margin="10,15" VerticalAlignment="Top" Columns="1">
                                                    <TextBlock FontSize="15" Text="大时代" TextWrapping="Wrap" />
                                                    <TextBlock Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundAssist}}" Text="时代少年团" TextWrapping="Wrap" />
                                                </UniformGrid>
                                            </DockPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="3" Rows="3" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                </ListBox>
                            </TabItem>
                        </TabControl>
                    </h:SelectorHost>
                    <Grid Margin="20">
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="{DynamicResource {x:Static h:FontSizeKeys.Header3}}"
                                   FontWeight="Black"
                                   Text="新碟上架" />
                        <TextBlock Margin="10,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Text="更多&gt;&gt;" />
                    </Grid>
                    <ListBox Height="Auto" h:Cattach.ItemHeight="Auto" ItemsSource="{h:GetRange Start=1, Count=6}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <UniformGrid Columns="1" DockPanel.Dock="Bottom">
                                        <TextBlock FontSize="15" Text="大时代" TextWrapping="Wrap" />
                                        <TextBlock Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundAssist}}" Text="时代少年团" TextWrapping="Wrap" />
                                    </UniformGrid>
                                    <Border Width="Auto" Height="150" Style="{DynamicResource {x:Static h:BorderKeys.Card}}">
                                        <Image />
                                    </Border>
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="6" Rows="1" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>

                    <Grid Margin="20">
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="{DynamicResource {x:Static h:FontSizeKeys.Header3}}"
                                   FontWeight="Black"
                                   Text="精选视频" />
                        <TextBlock Margin="10,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Text="更多&gt;&gt;" />
                    </Grid>
                    <ListBox Height="Auto" h:Cattach.ItemHeight="Auto" ItemsSource="{h:GetRange Start=1, Count=6}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <UniformGrid Columns="1" DockPanel.Dock="Bottom">
                                        <TextBlock FontSize="15" Text="大时代" TextWrapping="Wrap" />
                                        <TextBlock Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundAssist}}" Text="时代少年团" TextWrapping="Wrap" />
                                    </UniformGrid>
                                    <Border Width="Auto" Height="150" Style="{DynamicResource {x:Static h:BorderKeys.Card}}">
                                        <Image />
                                    </Border>
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" Rows="1" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
