<UserControl x:Class="HeBianGu.App.Chart.View.Pie.PieBasicControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.App.Chart.View.Pie"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel>
            <GroupBox Height="500" Header="默认样式">
                <h:Chart Padding="100,50">
                    <h:Series>
                        <h:Pie Data="4,5,6,7" Foreground="red,green,blue,purple" xDisplay="成都,北京,牡丹江,长春" />
                    </h:Series>
                    <h:PathLegend />
                </h:Chart>
            </GroupBox>

            <GroupBox Height="500" Header="默认样式">
                <h:Chart Padding="100,50">
                    <h:Series>
                        <h:Pie Data="4,5,7"
                               Foreground="red,green,blue,purple"
                               Len="180"
                               xDisplay="成都,北京,牡丹江," />
                    </h:Series>

                    <h:PathLegend />
                </h:Chart>
            </GroupBox>

            <GroupBox Height="500" Header="默认样式">
                <h:Chart Padding="100,50">
                    <h:Series>
                        <h:Pie Data="4,6"
                               Foreground="red,green,blue,purple"
                               Len="180"
                               xDisplay="成都,北京" />
                    </h:Series>

                    <h:PathLegend />
                </h:Chart>
            </GroupBox>

            <GroupBox Height="500" Header="Customized Pie">
                <h:Chart Padding="100,50">
                    <h:Series>
                        <h:Pie Data="4,5,6,7"
                               Foreground="red,green,blue,purple"
                               IsCustomized="True"
                               Len="180"
                               xDisplay="成都,北京,牡丹江,长春" />
                    </h:Series>

                    <h:PathLegend />
                </h:Chart>
            </GroupBox>

            <GroupBox Height="500" Header="默认样式">
                <h:Chart Padding="100,50">
                    <h:Series>
                        <h:Pie CircleLen="120"
                               Data="1,3,5,7"
                               Foreground="red,green,blue,purple"
                               Len="180"
                               xDisplay="成都,北京,牡丹江,长春" />
                    </h:Series>

                    <h:PathLegend />
                </h:Chart>
            </GroupBox>

            <GroupBox Height="500" Header="Customized Pie">
                <h:Chart Padding="100,50">
                    <h:Series>
                        <h:Pie CircleLen="20"
                               Data="4,5,6,7"
                               Foreground="red,green,blue,purple"
                               IsCustomized="True"
                               Len="180"
                               xDisplay="成都,北京,牡丹江,长春" />
                    </h:Series>

                    <h:PathLegend />
                </h:Chart>
            </GroupBox>

            <GroupBox Height="500" Header="默认样式">
                <h:Chart Padding="100,50">
                    <h:Series>
                        <h:Pie CircleLen="120"
                               Data="1,3,5,7"
                               Foreground="red,green,blue,purple"
                               Len="180"
                               xDisplay="成都,北京,牡丹江,长春" />

                        <h:Pie Data="1,3,2,2"
                               Foreground="#c23531,#2f4554,#61a0a8,#d48265"
                               Len="100"
                               xDisplay="成都,北京,牡丹江,长春">
                            <h:Pie.LineStyle>
                                <Style TargetType="Path">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                            </h:Pie.LineStyle>

                            <h:Pie.LabelStyle>
                                <Style TargetType="Label">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                            </h:Pie.LabelStyle>
                        </h:Pie>
                    </h:Series>

                    <h:PathLegend />
                </h:Chart>
            </GroupBox>

            <GroupBox Height="500" Header="默认样式">
                <h:Chart Padding="100,50">
                    <h:Series>
                        <h:Pie CircleLen="120"
                               Data="1,3,5,7"
                               Foreground="red,green,blue,purple"
                               Len="180"
                               xDisplay="成都,北京,牡丹江,长春" />

                        <h:Pie CircleLen="70"
                               Data="1,3,2,2"
                               Foreground="#c4ccd3,#546570,#6e7074,#61a0a8"
                               Len="100"
                               xDisplay="成都,北京,牡丹江,长春">
                            <h:Pie.LineStyle>
                                <Style TargetType="Path">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                            </h:Pie.LineStyle>

                            <h:Pie.LabelStyle>
                                <Style TargetType="Label">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                            </h:Pie.LabelStyle>
                        </h:Pie>

                        <h:Pie Data="4,1,3,2"
                               Foreground="#c23531,#2f4554,#61a0a8,#d48265"
                               Len="50"
                               xDisplay="成都,北京,牡丹江,长春">
                            <h:Pie.LineStyle>
                                <Style TargetType="Path">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                            </h:Pie.LineStyle>

                            <h:Pie.LabelStyle>
                                <Style TargetType="Label">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                            </h:Pie.LabelStyle>
                        </h:Pie>
                    </h:Series>

                    <h:PathLegend />
                </h:Chart>
            </GroupBox>

            <GroupBox Height="500" Header="默认样式">
                <h:Chart Padding="100,50">
                    <h:Series>
                        <h:Pie CircleLen="120"
                               Data="1,3,5,7"
                               Foreground="#c23531,#2f4554,#61a0a8,#d48265"
                               Len="180"
                               xDisplay="成都,北京,牡丹江,长春" />

                        <h:Pie CircleLen="70"
                               Data="1,3,2,2"
                               Foreground="red,green,blue,purple"
                               Len="120"
                               xDisplay="成都,北京,牡丹江,长春">
                            <h:Pie.LineStyle>
                                <Style TargetType="Path">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                            </h:Pie.LineStyle>

                            <h:Pie.LabelStyle>
                                <Style TargetType="Label">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                            </h:Pie.LabelStyle>
                        </h:Pie>

                        <h:Pie Data="4,1,3,2"
                               Foreground="#F23531,#Ff4554,#F1a0a8,#F48965"
                               Len="70"
                               xDisplay="成都,北京,牡丹江,长春">
                            <h:Pie.LineStyle>
                                <Style TargetType="Path">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                            </h:Pie.LineStyle>

                            <h:Pie.LabelStyle>
                                <Style TargetType="Label">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                            </h:Pie.LabelStyle>
                        </h:Pie>
                    </h:Series>

                    <h:PathLegend />
                </h:Chart>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
