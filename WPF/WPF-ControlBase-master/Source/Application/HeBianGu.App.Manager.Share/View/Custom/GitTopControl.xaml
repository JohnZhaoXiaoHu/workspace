<UserControl x:Class="HeBianGu.App.Manager.View.Custom.GitTopControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Custom"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel>
            <GroupBox Height="400" Header="Uniform布局">
                <h:GitTopContainer>
                    <h:GitTopContainer.CenterContent>
                        <Grid Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="55"
                                       Text="中间内容" />
                        </Grid>
                    </h:GitTopContainer.CenterContent>

                    <h:GitTopItem Background="Purple">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                                       Text="第一个列表" />
                        </h:GitTopItem.HeaderContent>

                        <TextBox Margin="10,2" h:Cattach.Icon="&#xe787;" h:Cattach.Watermark="请输入筛选条件" />
                    </h:GitTopItem>

                    <h:GitTopItem Background="{DynamicResource {x:Static h:BrushKeys.Accent}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                                       Text="第二个列表" />
                        </h:GitTopItem.HeaderContent>

                        <TextBox Margin="10,2" h:Cattach.Icon="&#xe787;" h:Cattach.Watermark="请输入筛选条件" />

                    </h:GitTopItem>

                    <h:GitTopItem Background="{DynamicResource {x:Static h:BrushKeys.Accent}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                                       Text="第三个列表" />
                        </h:GitTopItem.HeaderContent>

                        <TextBox Margin="10,2" h:Cattach.Icon="&#xe787;" h:Cattach.Watermark="请输入筛选条件" />

                    </h:GitTopItem>

                    <h:GitTopItem Background="{DynamicResource {x:Static h:BrushKeys.Accent}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                                       Text="第四个列表" />
                        </h:GitTopItem.HeaderContent>
                        <TextBox Margin="10,2" h:Cattach.Icon="&#xe787;" h:Cattach.Watermark="请输入筛选条件" />
                    </h:GitTopItem>
                </h:GitTopContainer>
            </GroupBox>

            <GroupBox Height="400" Header="Uniform布局">
                <h:GitTopContainer DockPanel.Dock="Bottom">
                    <h:GitTopContainer.CenterContent>
                        <Grid Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="55"
                                       Text="中间内容" />
                        </Grid>
                    </h:GitTopContainer.CenterContent>
                    <h:GitTopItem VerticalContentAlignment="Bottom" Background="{DynamicResource {x:Static h:BrushKeys.Accent}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                                       Text="第一个列表" />
                        </h:GitTopItem.HeaderContent>

                        <TextBox Margin="10,2" h:Cattach.Icon="&#xe787;" h:Cattach.Watermark="请输入筛选条件" />

                    </h:GitTopItem>

                    <h:GitTopItem VerticalContentAlignment="Bottom" Background="{DynamicResource {x:Static h:BrushKeys.Accent}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                                       Text="第二个列表" />
                        </h:GitTopItem.HeaderContent>

                        <TextBox Margin="10,2" h:Cattach.Icon="&#xe787;" h:Cattach.Watermark="请输入筛选条件" />

                    </h:GitTopItem>

                    <h:GitTopItem VerticalContentAlignment="Bottom" Background="{DynamicResource {x:Static h:BrushKeys.Accent}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                                       Text="第三个列表" />
                        </h:GitTopItem.HeaderContent>

                        <TextBox Margin="10,2" h:Cattach.Icon="&#xe787;" h:Cattach.Watermark="请输入筛选条件" />

                    </h:GitTopItem>

                    <h:GitTopItem VerticalContentAlignment="Bottom" Background="{DynamicResource {x:Static h:BrushKeys.Accent}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                                       Text="第四个列表" />
                        </h:GitTopItem.HeaderContent>

                        <TextBox Margin="10,2" h:Cattach.Icon="&#xe787;" h:Cattach.Watermark="请输入筛选条件" />

                    </h:GitTopItem>
                </h:GitTopContainer>
            </GroupBox>

            <GroupBox Height="400" Header="Grid布局">
                <h:GitTopContainer HeaderHeight="0">
                    <h:GitTopContainer.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid />
                        </ItemsPanelTemplate>
                    </h:GitTopContainer.ItemsPanel>

                    <h:GitTopContainer.CenterContent>
                        <Grid Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="55"
                                       Text="中间内容" />
                        </Grid>
                    </h:GitTopContainer.CenterContent>

                    <h:GitTopItem HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       FontSize="15"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe682;" />
                        </h:GitTopItem.HeaderContent>
                        <Grid Width="500" Height="300" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>

                    <h:GitTopItem HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock Margin="100,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       FontSize="50"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe680;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="600" Height="300" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>

                    <h:GitTopItem HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock Margin="0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       FontSize="40"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe67e;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="600" Height="400" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>

                    <h:GitTopItem HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock Margin="0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       FontSize="15"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe6af;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="300" Height="300" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>
                </h:GitTopContainer>
            </GroupBox>


            <GroupBox Height="400" Header="Grid布局">
                <h:GitTopContainer HeaderHeight="0">
                    <h:GitTopContainer.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid />
                        </ItemsPanelTemplate>
                    </h:GitTopContainer.ItemsPanel>

                    <h:GitTopContainer.CenterContent>
                        <Grid Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="55"
                                       Text="中间内容" />
                        </Grid>
                    </h:GitTopContainer.CenterContent>

                    <h:GitTopItem HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock FontSize="80" Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}" Text="&#xe682;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="500" Height="300" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>

                    <h:GitTopItem HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock Margin="100,0"
                                       FontSize="80"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe680;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="400" Height="300" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>

                    <h:GitTopItem HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock Margin="200,0"
                                       FontSize="80"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe67e;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="300" Height="300" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>

                    <h:GitTopItem HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock Margin="300,0"
                                       FontSize="80"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe6af;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="600" Height="300" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>
                </h:GitTopContainer>
            </GroupBox>

            <GroupBox Height="400" Header="显示隐藏按钮">
                <h:GitTopContainer HeaderHeight="0" Style="{StaticResource {x:Static h:GitTopContainer.ToggleKey}}">
                    <h:GitTopContainer.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid />
                        </ItemsPanelTemplate>
                    </h:GitTopContainer.ItemsPanel>

                    <h:GitTopContainer.CenterContent>
                        <Grid Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="55"
                                       Text="中间内容" />
                        </Grid>
                    </h:GitTopContainer.CenterContent>

                    <h:GitTopItem HorizontalContentAlignment="Right" VerticalContentAlignment="Top" Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock Margin="0,50,0,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       FontSize="50"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe607;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="500" Height="300" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>

                    <h:GitTopItem HorizontalContentAlignment="Right" VerticalContentAlignment="Top" Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock Margin="0,100,0,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       FontSize="50"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe813;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="600" Height="300" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>

                    <h:GitTopItem HorizontalContentAlignment="Right" VerticalContentAlignment="Top" Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock Margin="0,150,0,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       FontSize="50"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe64b;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="600" Height="400" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>

                    <h:GitTopItem HorizontalContentAlignment="Right" VerticalContentAlignment="Top" Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock Margin="0,200,0,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       FontSize="50"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe682;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="300" Height="300" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>
                </h:GitTopContainer>
            </GroupBox>

            <GroupBox Height="400" Header="StackPanel布局">
                <h:GitTopContainer HeaderHeight="0">
                    <h:GitTopContainer.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </h:GitTopContainer.ItemsPanel>

                    <h:GitTopContainer.CenterContent>
                        <Grid Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="55"
                                       Text="中间内容" />
                        </Grid>
                    </h:GitTopContainer.CenterContent>

                    <h:GitTopItem Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock FontSize="80" Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}" Text="&#xe682;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="500" Height="300" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>

                    <h:GitTopItem Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock FontSize="80" Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}" Text="&#xe680;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="500" Height="300" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>

                    <h:GitTopItem Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock Margin="0"
                                       FontSize="80"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe67e;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="500" Height="300" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>

                    <h:GitTopItem Style="{StaticResource {x:Static h:GitTopItem.CircleKey}}">
                        <h:GitTopItem.HeaderContent>
                            <TextBlock Margin="0"
                                       FontSize="80"
                                       Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                       Text="&#xe6af;" />
                        </h:GitTopItem.HeaderContent>

                        <Grid Width="500" Height="300" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                            <Button Command="{x:Static h:GitTopContainer.CoverHideCommand}" Style="{DynamicResource {x:Static h:ButtonKeys.Close}}" />
                        </Grid>
                    </h:GitTopItem>
                </h:GitTopContainer>
            </GroupBox>


        </StackPanel>
    </ScrollViewer>
</UserControl>
