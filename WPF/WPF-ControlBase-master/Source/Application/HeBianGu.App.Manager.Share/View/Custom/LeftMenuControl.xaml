<UserControl x:Class="HeBianGu.App.Manager.View.Custom.LeftMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Custom"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UniformGrid Margin="10,0" Columns="2">

        <GroupBox Header="S.LeftMenu.Default">
            <h:LeftMenu Width="300">
                <h:LinkAction DisplayName="Home" Logo="&#xe7b3;" />
                <h:LinkAction DisplayName="Counter" Logo="&#xe7b8;" />
                <h:LinkAction DisplayName="Fetch Data" Logo="&#xe7be;" />
            </h:LeftMenu>
        </GroupBox>

        <GroupBox Header="S.LeftMenu.LinkGroups.Default">
            <h:LeftMenu Width="300" Style="{DynamicResource {x:Static h:LeftMenu.LinkActionGroupKey}}">
                <h:LinkActionGroup DisplayName="扩展控件" IsExpanded="True" Logo="&#xe69f;">
                    <h:LinkActionGroup.Links>
                        <h:LinkAction Action="RealData"
                                      Controller="Loyout"
                                      DisplayName="数据列表"
                                      Logo="&#xe69f;" />
                        <h:LinkAction Action="Shuttle"
                                      Controller="Custom"
                                      DisplayName="穿梭控件"
                                      Logo="&#xe69f;" />
                        <h:LinkAction Action="PropertyGrid"
                                      Controller="Custom"
                                      DisplayName="属性表单"
                                      Logo="&#xe69e;" />
                        <h:LinkAction Action="Ping"
                                      Controller="Custom"
                                      DisplayName="网络诊断"
                                      Logo="&#xe69e;" />
                        <h:LinkAction Action="Step"
                                      Controller="Custom"
                                      DisplayName="步骤进度"
                                      Logo="&#xe69e;" />
                        <h:LinkAction Action="LeftMenu"
                                      Controller="Custom"
                                      DisplayName="导航菜单"
                                      Logo="&#xe69e;" />
                    </h:LinkActionGroup.Links>
                </h:LinkActionGroup>

                <h:LinkActionGroup DisplayName="扩展控件" IsExpanded="True" Logo="&#xe69f;">
                    <h:LinkActionGroup.Links>
                        <h:LinkAction Action="RealData"
                                      Controller="Loyout"
                                      DisplayName="数据列表"
                                      Logo="&#xe69f;" />
                        <h:LinkAction Action="Shuttle"
                                      Controller="Custom"
                                      DisplayName="穿梭控件"
                                      Logo="&#xe69f;" />
                        <h:LinkAction Action="PropertyGrid"
                                      Controller="Custom"
                                      DisplayName="属性表单"
                                      Logo="&#xe69e;" />
                        <h:LinkAction Action="Ping"
                                      Controller="Custom"
                                      DisplayName="网络诊断"
                                      Logo="&#xe69e;" />
                        <h:LinkAction Action="Step"
                                      Controller="Custom"
                                      DisplayName="步骤进度"
                                      Logo="&#xe69e;" />
                        <h:LinkAction Action="LeftMenu"
                                      Controller="Custom"
                                      DisplayName="导航菜单"
                                      Logo="&#xe69e;" />
                    </h:LinkActionGroup.Links>
                </h:LinkActionGroup>
            </h:LeftMenu>
        </GroupBox>
    </UniformGrid>
</UserControl>
