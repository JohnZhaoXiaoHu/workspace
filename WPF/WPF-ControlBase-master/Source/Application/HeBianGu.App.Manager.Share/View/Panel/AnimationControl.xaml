<UserControl x:Class="HeBianGu.App.Manager.View.Panel.AnimationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Panel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <ScrollViewer>

        <ScrollViewer.Resources>
            <Style BasedOn="{StaticResource {x:Static h:ButtonKeys.Transparent}}" TargetType="Button">
                <Setter Property="h:Cattach.IconSize" Value="53" />
                <Setter Property="Height" Value="Auto" />
                <Setter Property="Width" Value="Auto" />
                <Setter Property="h:Cattach.Icon" Value="&#xe602;" />
            </Style>

            <DataTemplate DataType="{x:Type h:TestViewModel}">
                <Grid>
                    <Button Width="Auto" Height="Auto" Content="{Binding Value}" />
                </Grid>
            </DataTemplate>
        </ScrollViewer.Resources>
        <StackPanel>
            <h:Row Style="{DynamicResource {x:Static h:Row.Column12Key}}">
                <Button Command="{Binding RelayCommand}"
                        CommandParameter="Button.Click.Add"
                        Content="添加.."
                        Style="{StaticResource {x:Static h:ButtonKeys.Dynamic}}" />

                <Button Grid.Column="1"
                        Command="{Binding RelayCommand}"
                        CommandParameter="Button.Click.Delete"
                        Content="删除.."
                        Style="{StaticResource {x:Static h:ButtonKeys.Dynamic}}" />

                <Button Grid.Column="2"
                        Command="{Binding RelayCommand}"
                        CommandParameter="Button.Click.Previous"
                        Content="上一项.."
                        Style="{StaticResource {x:Static h:ButtonKeys.Dynamic}}" />

                <Button Grid.Column="3"
                        Command="{Binding RelayCommand}"
                        CommandParameter="Button.Click.Next"
                        Content="下一项.."
                        Style="{StaticResource {x:Static h:ButtonKeys.Dynamic}}" />

            </h:Row>

            <UniformGrid Columns="2">
                <GroupBox Height="500" Header="CirlePanel">
                    <ListBox ItemsSource="{Binding Collection}" h:Cattach.ItemHeight="Auto">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <h:CirclePanel AngleToCenter="True" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.Template>
                            <ControlTemplate TargetType="ListBox">
                                <DockPanel>
                                    <h:Row DockPanel.Dock="Top" Style="{DynamicResource {x:Static h:Row.Column12Key}}">
                                        <Button Grid.Column="0"
                                                h:Cattach.Icon="&#xe8b7;"
                                                Command="{x:Static h:Commander.Prev}"
                                                CommandTarget="{Binding ElementName=items, Converter={x:Static h:XConverter.ItemPanelConverter}}"
                                                Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" />

                                        <Button Grid.Column="1"
                                                h:Cattach.Icon="&#xe8b6;"
                                                Command="{x:Static h:Commander.Next}"
                                                CommandTarget="{Binding ElementName=items, Converter={x:Static h:XConverter.ItemPanelConverter}}"
                                                Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" />
                                    </h:Row>

                                    <ItemsPresenter x:Name="items" />
                                </DockPanel>
                            </ControlTemplate>
                        </ListBox.Template>
                    </ListBox>
                </GroupBox>

                <GroupBox Header="CirlePanel">
                    <ListBox ItemsSource="{Binding Collection}"  h:Cattach.ItemHeight="Auto">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <h:CirclePanel DisplayCount="8">
                                    <h:Interaction.Behaviors>
                                        <h:FluidMoveBehavior AppliesTo="Children" />
                                    </h:Interaction.Behaviors>
                                </h:CirclePanel>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.Template>
                            <ControlTemplate TargetType="ListBox">
                                <DockPanel>
                                    <h:Row DockPanel.Dock="Top" Style="{DynamicResource {x:Static h:Row.Column12Key}}">
                                        <Button Grid.Column="0"
                                                h:Cattach.Icon="&#xe8b7;"
                                                Command="{x:Static h:Commander.Prev}"
                                                CommandTarget="{Binding ElementName=items, Converter={x:Static h:XConverter.ItemPanelConverter}}"
                                                Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" />

                                        <Button Grid.Column="1"
                                                h:Cattach.Icon="&#xe8b6;"
                                                Command="{x:Static h:Commander.Next}"
                                                CommandTarget="{Binding ElementName=items, Converter={x:Static h:XConverter.ItemPanelConverter}}"
                                                Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" />
                                    </h:Row>

                                    <ItemsPresenter x:Name="items" />
                                </DockPanel>
                            </ControlTemplate>
                        </ListBox.Template>
                    </ListBox>
                </GroupBox>

                <GroupBox Header="CoverPanel">
                    <ListBox h:Cattach.ItemHeight="Auto">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <h:CoverPanel>
                                    <!--<h:Interaction.Behaviors>
                                        <h:FluidMoveBehavior AppliesTo="Children" Duration="00:00:00.5"/>
                                    </h:Interaction.Behaviors>-->
                                </h:CoverPanel>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.Template>
                            <ControlTemplate TargetType="ListBox">
                                <DockPanel>
                                    <h:Row DockPanel.Dock="Top" Style="{DynamicResource {x:Static h:Row.Column12Key}}">
                                        <Button Grid.Column="0"
                                                h:Cattach.Icon="&#xe8b7;"
                                                Command="{x:Static h:Commander.Prev}"
                                                CommandTarget="{Binding ElementName=items, Converter={x:Static h:XConverter.ItemPanelConverter}}"
                                                Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" />

                                        <Button Grid.Column="1"
                                                h:Cattach.Icon="&#xe8b6;"
                                                Command="{x:Static h:Commander.Next}"
                                                CommandTarget="{Binding ElementName=items, Converter={x:Static h:XConverter.ItemPanelConverter}}"
                                                Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" />
                                    </h:Row>

                                    <ItemsPresenter x:Name="items" />
                                </DockPanel>
                            </ControlTemplate>
                        </ListBox.Template>

                        <Button Width="300"
                                Height="400"
                                h:Cattach.Icon=""
                                Background="Purple" />
                        <Button Width="300"
                                Height="400"
                                h:Cattach.Icon=""
                                Background="Gray" />
                        <Button Width="300"
                                Height="400"
                                h:Cattach.Icon=""
                                Background="Red" />
                        <Button Width="300"
                                Height="400"
                                h:Cattach.Icon=""
                                Background="Orange" />
                        <Button Width="300"
                                Height="400"
                                h:Cattach.Icon=""
                                Background="Green" />
                        <Button Width="300"
                                Height="400"
                                h:Cattach.Icon=""
                                Background="Beige" />
                        <Button Width="300"
                                Height="400"
                                h:Cattach.Icon=""
                                Background="Blue" />
                        <Button Width="300"
                                Height="400"
                                h:Cattach.Icon=""
                                Background="Beige" />
                        <Button Width="300"
                                Height="400"
                                h:Cattach.Icon=""
                                Background="Green" />
                        <Button Width="300"
                                Height="400"
                                h:Cattach.Icon=""
                                Background="Orange" />
                        <Button Width="300"
                                Height="400"
                                h:Cattach.Icon=""
                                Background="Red" />
                        <Button Width="300"
                                Height="400"
                                h:Cattach.Icon=""
                                Background="Gray" />
                        <Button Width="300"
                                Height="400"
                                h:Cattach.Icon=""
                                Background="Purple" />
                    </ListBox>
                </GroupBox>

                <GroupBox Height="500" Header="ArcPanel">
                    <ListBox ItemsSource="{Binding Collection}"  h:Cattach.ItemHeight="Auto">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <h:ArcPanel Margin="10"
                                            HorizontalAlignment="Right"
                                            AngleToCenter="True"
                                            EndAngle="440"
                                            StartAngle="280" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.Template>
                            <ControlTemplate TargetType="ListBox">
                                <DockPanel>
                                    <h:Row DockPanel.Dock="Top" Style="{DynamicResource {x:Static h:Row.Column12Key}}">
                                        <Button Grid.Column="0"
                                                h:Cattach.Icon="&#xe8b7;"
                                                Command="{x:Static h:Commander.Prev}"
                                                CommandTarget="{Binding ElementName=items, Converter={x:Static h:XConverter.ItemPanelConverter}}"
                                                Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" />

                                        <Button Grid.Column="1"
                                                h:Cattach.Icon="&#xe8b6;"
                                                Command="{x:Static h:Commander.Next}"
                                                CommandTarget="{Binding ElementName=items, Converter={x:Static h:XConverter.ItemPanelConverter}}"
                                                Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" />
                                    </h:Row>

                                    <ItemsPresenter x:Name="items" />
                                </DockPanel>
                            </ControlTemplate>
                        </ListBox.Template>
                    </ListBox>
                </GroupBox>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
