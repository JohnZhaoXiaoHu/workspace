<UserControl x:Class="HeBianGu.App.Manager.View.Panel.CircleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Panel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <ScrollViewer>

        <ScrollViewer.Resources>
            <Style BasedOn="{StaticResource {x:Static h:ButtonKeys.Transparent}}" TargetType="Button">
                <Setter Property="h:Cattach.IconSize" Value="53" />
                <Setter Property="Height" Value="Auto" />
                <Setter Property="h:Cattach.Icon" Value="&#xe8b7;" />
            </Style>
        </ScrollViewer.Resources>
        <StackPanel>
            <UniformGrid Columns="2">
                <GroupBox Header="CirlePanel - AngleToCenter">
                    <h:CirclePanel Width="500"
                                   Height="500"
                                   AngleToCenter="True"
                                   AnimationMode="FromCenter">
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                    </h:CirclePanel>
                </GroupBox>

                <GroupBox Header="CirlePanel">
                    <h:CirclePanel AnimationMode="FromCenter">
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                    </h:CirclePanel>
                </GroupBox>

                <GroupBox Header="CirlePanel - AngleToCenter">
                    <h:CirclePanel AngleToCenter="True" AnimationMode="FromCenter">
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                    </h:CirclePanel>
                </GroupBox>

                <GroupBox Header="CirlePanel - Len">
                    <h:CirclePanel Margin="1"
                                   AngleToCenter="True"
                                   AnimationMode="FromCenter"
                                   DisplayCount="-1"
                                   Len="180">
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                        <Button />
                    </h:CirclePanel>
                </GroupBox>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
