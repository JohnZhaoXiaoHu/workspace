<UserControl x:Class="HeBianGu.App.Manager.View.Panel.DragControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Panel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <ScrollViewer>

        <ScrollViewer.Resources>
            <Style BasedOn="{StaticResource {x:Static h:ButtonKeys.Dynamic}}" TargetType="Button">
                <Setter Property="Height" Value="Auto" />
                <Setter Property="Width" Value="Auto" />
                <Setter Property="Margin" Value="2" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="IsHitTestVisible" Value="False" />
            </Style>
        </ScrollViewer.Resources>
        <StackPanel>
            <Grid>
                <GroupBox Header="DraggPanel - Items">
                    <ListBox h:Cattach.ItemHeight="Auto">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <h:DragPanel ItemSeparation="2" ItemsHeight="220" ItemsWidth="220" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <Grid Width="200" Height="200" Background="Transparent">
                            <Button Content="1" />
                        </Grid>
                        <Grid Width="200" Height="200" Background="Transparent">
                            <Button Content="2" />
                        </Grid>
                        <Grid Width="200" Height="200" Background="Transparent">
                            <Button Content="3" />
                        </Grid>
                        <Grid Width="200" Height="200" Background="Transparent">
                            <Button Content="4" />
                        </Grid>
                        <Grid Width="200" Height="200" Background="Transparent">
                            <Button Content="5" />
                        </Grid>
                        <Grid Width="200" Height="200" Background="Transparent">
                            <Button Content="6" />
                        </Grid>
                        <Grid Width="200" Height="200" Background="Transparent">
                            <Button Content="7" />
                        </Grid>

                        <Grid Width="200" Height="200" Background="Transparent">
                            <Button Content="8" />
                        </Grid>

                        <Grid Width="200" Height="200" Background="Transparent">
                            <Button Content="9" />
                        </Grid>

                        <Grid Width="200" Height="200" Background="Transparent">
                            <Button Content="10" />
                        </Grid>

                        <Grid Width="200" Height="200" Background="Transparent">
                            <Button Content="11" />
                        </Grid>

                        <Grid Width="200" Height="200" Background="Transparent">
                            <Button Content="12" />
                        </Grid>
                    </ListBox>
                </GroupBox>
            </Grid>

            <Grid>
                <GroupBox Header="DraggPanel - ItemSource">
                    <ListBox h:Cattach.ItemHeight="Auto" ItemsSource="{Binding Collection}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <h:DragPanel ItemSeparation="2" ItemsHeight="220" ItemsWidth="220" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type h:TestViewModel}">
                                <Grid Width="200" Height="200" Background="Transparent">
                                    <Button Content="{Binding Value}" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
