<UserControl x:Class="HeBianGu.App.Manager.View.Loyout.HomeAControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Loyout"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <GroupBox Header="昨日数据一览" Style="{DynamicResource {x:Static h:GroupBoxKeys.UnderLine}}">
            <UniformGrid Columns="3">
                <UniformGrid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" />
                        <Setter Property="FontSize" Value="15" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                    <Style TargetType="Border">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </UniformGrid.Resources>

                <Border Width="300" Height="120" CornerRadius="15" Margin="10">
                    <Border.Background>
                        <LinearGradientBrush>
                            <GradientStop Offset="0" Color="#FF995100" />
                            <GradientStop Offset="1" Color="#FFFF8900" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <UniformGrid Columns="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock FontSize="35" Text="368K" />
                            <TextBlock Text="总收入" />
                        </StackPanel>

                        <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="23.6% ↑" />
                            <TextBlock Text="总收入" />
                        </StackPanel>
                    </UniformGrid>
                </Border>

                <Border Width="300" Height="120" CornerRadius="15">
                    <Border.Background>
                        <LinearGradientBrush>
                            <GradientStop Offset="0" Color="#FF0075CC" />
                            <GradientStop Offset="1" Color="#FF0093FF" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <UniformGrid Columns="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock FontSize="35" Text="368K" />
                            <TextBlock Text="总收入" />
                        </StackPanel>

                        <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="23.6% ↑" />
                            <TextBlock Text="总收入" />
                        </StackPanel>
                    </UniformGrid>
                </Border>

                <Border Width="300" Height="120" CornerRadius="15">
                    <Border.Background>
                        <LinearGradientBrush>
                            <GradientStop Offset="0" Color="#FF009933" />
                            <GradientStop Offset="1" Color="#FF00FF56" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <UniformGrid Columns="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock FontSize="35" Text="368K" />
                            <TextBlock Text="总收入" />
                        </StackPanel>

                        <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="23.6% ↑" />
                            <TextBlock Text="总收入" />
                        </StackPanel>
                    </UniformGrid>
                </Border>

                <Border Width="300" Height="120" CornerRadius="15">
                    <Border.Background>
                        <LinearGradientBrush>
                            <GradientStop Offset="0" Color="#FF990008" />
                            <GradientStop Offset="1" Color="#FFFF000E" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <UniformGrid Columns="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock FontSize="35" Text="368K" />
                            <TextBlock Text="总收入" />
                        </StackPanel>

                        <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="23.6% ↑" />
                            <TextBlock Text="总收入" />
                        </StackPanel>
                    </UniformGrid>
                </Border>
            </UniformGrid>
        </GroupBox>

        <GroupBox Header="昨日数据一览" Style="{DynamicResource {x:Static h:GroupBoxKeys.UnderLine}}">
            <UniformGrid Columns="3">
                <UniformGrid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" />
                        <Setter Property="FontSize" Value="15" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                    <Style TargetType="Border">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </UniformGrid.Resources>

                <Border Width="300" Height="120" CornerRadius="15" Margin="10">
                    <Border.Background>
                        <LinearGradientBrush>
                            <GradientStop Offset="0" Color="#FF00BFCC" />
                            <GradientStop Offset="1" Color="#FF008E99" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <UniformGrid Columns="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Left" Text="已完成订单" />
                            <TextBlock Margin="0,5,0,0" FontSize="35" Text="361894" />
                        </StackPanel>

                        <TextBlock Margin="30,0"
                                   HorizontalAlignment="Right"
                                   FontSize="55"
                                   Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                                   Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                   Text="&#xe614;" />
                    </UniformGrid>
                </Border>

                <Border Width="300" Height="120" CornerRadius="15">
                    <Border.Background>
                        <LinearGradientBrush>
                            <GradientStop Offset="0" Color="#FFCCB700" />
                            <GradientStop Offset="1" Color="#FF998900" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <UniformGrid Columns="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Left" Text="待完成订单" />
                            <TextBlock Margin="0,5,0,0" FontSize="35" Text="5934" />
                        </StackPanel>

                        <TextBlock Margin="30,0"
                                   HorizontalAlignment="Right"
                                   FontSize="55"
                                   Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                                   Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                   Text="&#xe614;" />
                    </UniformGrid>
                </Border>

                <Border Width="300" Height="120" CornerRadius="15">
                    <Border.Background>
                        <LinearGradientBrush>
                            <GradientStop Offset="0" Color="#FFF903EF" />
                            <GradientStop Offset="1" Color="#FF990092" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <UniformGrid Columns="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Left" Text="待确认订单" />
                            <TextBlock Margin="0,5,0,0" FontSize="35" Text="642" />
                        </StackPanel>

                        <TextBlock Margin="30,0"
                                   HorizontalAlignment="Right"
                                   FontSize="55"
                                   Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                                   Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                   Text="&#xe62d;" />
                    </UniformGrid>
                </Border>

                <Border Width="300" Height="120" CornerRadius="15">
                    <Border.Background>
                        <LinearGradientBrush>
                            <GradientStop Offset="0" Color="#FF2300FF" />
                            <GradientStop Offset="1" Color="#FF150099" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <UniformGrid Columns="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Left" Text="新增订单" />
                            <TextBlock Margin="0,5,0,0" FontSize="35" Text="1262" />
                        </StackPanel>

                        <TextBlock Margin="30,0"
                                   HorizontalAlignment="Right"
                                   FontSize="55"
                                   Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                                   Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}"
                                   Text="&#xe730;" />
                    </UniformGrid>
                </Border>
            </UniformGrid>
        </GroupBox>
    </StackPanel>
</UserControl>
