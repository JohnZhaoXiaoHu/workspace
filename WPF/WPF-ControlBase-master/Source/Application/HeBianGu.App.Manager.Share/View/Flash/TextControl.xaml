<UserControl x:Class="HeBianGu.App.Manager.View.Flash.TextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cl="clr-namespace:System.Collections;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Flash"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <ScrollViewer>
        <ScrollViewer.Resources>
            <Style BasedOn="{StaticResource {x:Static h:ButtonKeys.Transparent}}" TargetType="{x:Type Button}">
                <Setter Property="RenderTransform" Value="{DynamicResource {x:Static h:SystemKeys.TransformGroup}}" />
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                <Setter Property="Width" Value="Auto" />
                <Setter Property="Height" Value="Auto" />
                <Setter Property="h:Cattach.IconSize" Value="350" />
                <Setter Property="FontSize" Value="200" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="IsHitTestVisible" Value="False" />
            </Style>

            <Style x:Key="S.Label.TextBlock" BasedOn="{StaticResource {x:Type Label}}" TargetType="Label">
                <Setter Property="RenderTransform" Value="{DynamicResource {x:Static h:SystemKeys.TransformGroup}}" />
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                <Setter Property="Width" Value="Auto" />
                <Setter Property="Height" Value="Auto" />
                <Setter Property="FontSize" Value="200" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Label">
                            <TextBlock HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                       VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                       FontSize="{TemplateBinding FontSize}"
                                       Foreground="{TemplateBinding Foreground}"
                                       Text="{Binding Content}" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ScrollViewer.Resources>
        <StackPanel>
            <GroupBox Height="500" Header="跑马灯">
                <Grid>
                    <h:FlashPanel Width="400" Height="400" SplitMilliSecond="-1200">
                        <h:FlashPanel.Timelines>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                             From="-1000"
                                             To="1000"
                                             Duration="00:00:02" />
                        </h:FlashPanel.Timelines>
                        <Button Content="5" />
                        <Button Content="4" />
                        <Button Content="3" />
                        <Button Content="2" />
                        <Button Content="1" />
                    </h:FlashPanel>
                </Grid>
            </GroupBox>

            <GroupBox Height="500" Header="自由落体">
                <Grid>
                    <h:FlashPanel Width="400"
                                  Height="400"
                                  ClipToBounds="True"
                                  SplitMilliSecond="-200">
                        <h:FlashPanel.Timelines>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)"
                                             From="-300" To="100"
                                             Duration="00:00:01">
                                <DoubleAnimation.EasingFunction>
                                    <BounceEase />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="1" To="0"
                                             Duration="00:00:01.2" />
                        </h:FlashPanel.Timelines>
                        <Button Content="5" />
                        <Button Content="4" />
                        <Button Content="3" />
                        <Button Content="2" />
                        <Button Content="1" />
                    </h:FlashPanel>
                </Grid>
            </GroupBox>

            <GroupBox Height="500" Header="BounceEase">
                <Grid>
                    <h:FlashPanel Width="400"
                                  Height="400"
                                  ClipToBounds="True"
                                  SplitMilliSecond="-200">
                        <h:FlashPanel.Timelines>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                             From="0" To="1"
                                             Duration="00:00:01">
                                <DoubleAnimation.EasingFunction>
                                    <BounceEase />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                             From="0" To="1"
                                             Duration="00:00:01">
                                <DoubleAnimation.EasingFunction>
                                    <BounceEase />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="1" To="0"
                                             Duration="00:00:01" />
                        </h:FlashPanel.Timelines>
                        <Button Content="5" Opacity="0" />
                        <Button Content="4" Opacity="0" />
                        <Button Content="3" Opacity="0" />
                        <Button Content="2" Opacity="0" />
                        <Button Content="1" Opacity="0" />
                    </h:FlashPanel>
                </Grid>
            </GroupBox>

            <GroupBox Height="500" Header="BackEase">
                <Grid>
                    <h:FlashPanel Width="400"
                                  Height="400"
                                  ClipToBounds="True"
                                  SplitMilliSecond="-200">
                        <h:FlashPanel.Timelines>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                             From="0" To="1"
                                             Duration="00:00:01">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                             From="0" To="1"
                                             Duration="00:00:01">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="1" To="0"
                                             Duration="00:00:01" />
                        </h:FlashPanel.Timelines>
                        <Button Content="5" />
                        <Button Content="4" />
                        <Button Content="3" />
                        <Button Content="2" />
                        <Button Content="1" />
                    </h:FlashPanel>
                </Grid>
            </GroupBox>

            <GroupBox Height="500" Header="None">
                <Grid>
                    <h:FlashPanel Width="400"
                                  Height="400"
                                  ClipToBounds="True"
                                  SplitMilliSecond="-200">
                        <h:FlashPanel.Timelines>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                             From="0" To="1"
                                             Duration="00:00:01" />
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                             From="0" To="1"
                                             Duration="00:00:01" />

                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="1" To="0"
                                             Duration="00:00:01" />
                        </h:FlashPanel.Timelines>
                        <Button Content="5" />
                        <Button Content="4" />
                        <Button Content="3" />
                        <Button Content="2" />
                        <Button Content="1" />
                    </h:FlashPanel>
                </Grid>
            </GroupBox>

            <GroupBox Height="500" Header="ElasticEase">
                <Grid>
                    <h:FlashPanel Width="400"
                                  Height="400"
                                  ClipToBounds="True"
                                  SplitMilliSecond="-200">
                        <h:FlashPanel.Timelines>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                             From="0" To="1"
                                             Duration="00:00:01">
                                <DoubleAnimation.EasingFunction>
                                    <ElasticEase />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                             From="0" To="1"
                                             Duration="00:00:01">
                                <DoubleAnimation.EasingFunction>
                                    <ElasticEase />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="1" To="0"
                                             Duration="00:00:01" />
                        </h:FlashPanel.Timelines>
                        <Button Content="5" />
                        <Button Content="4" />
                        <Button Content="3" />
                        <Button Content="2" />
                        <Button Content="1" />
                    </h:FlashPanel>
                </Grid>
            </GroupBox>

            <GroupBox Height="500" Header="透明度/隐藏闪烁">
                <Grid>
                    <h:FlashPanel Width="400"
                                  Height="400"
                                  ClipToBounds="True"
                                  SplitMilliSecond="-200">
                        <h:FlashPanel.Timelines>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="00:00:01">
                                <DoubleAnimation.EasingFunction>
                                    <ElasticEase />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation BeginTime="00:00:00.5"
                                             Storyboard.TargetProperty="Opacity"
                                             From="1" To="0"
                                             Duration="00:00:01" />
                        </h:FlashPanel.Timelines>
                        <Button h:Cattach.Icon="5" Content="5" />
                        <Button Content="4" />
                        <Button Content="3" />
                        <Button Content="2" />
                        <Button Content="1" />
                    </h:FlashPanel>
                </Grid>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
