<UserControl x:Class="HeBianGu.App.Manager.View.Flash.WaveControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cl="clr-namespace:System.Collections;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Flash"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">



    <ScrollViewer>
        <ScrollViewer.Resources>
            <Style TargetType="Ellipse">
                <Setter Property="RenderTransform" Value="{DynamicResource {x:Static h:SystemKeys.TransformGroup}}" />
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            </Style>
        </ScrollViewer.Resources>
        <StackPanel>
            <GroupBox Height="500" Header="默认">
                <Grid>
                    <h:FlashPanel Width="400" Height="400" SplitMilliSecond="-700">
                        <h:FlashPanel.Timelines>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="1" To="0"
                                                 Duration="00:00:01" />
                        </h:FlashPanel.Timelines>

                        <Ellipse Fill="Red" />
                        <Ellipse Fill="Red" />
                        <Ellipse Fill="Red" />
                        <Ellipse Fill="Red" />
                        <Ellipse Fill="Red" />
                    </h:FlashPanel>
                </Grid>
            </GroupBox>

            <GroupBox Height="500" Header="两个">
                <Grid>
                    <h:FlashPanel Width="400" Height="400" SplitMilliSecond="-700">
                        <h:FlashPanel.Timelines>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="1" To="0"
                                                 Duration="00:00:01" />
                        </h:FlashPanel.Timelines>

                        <Ellipse Fill="Red" />
                        <Ellipse Fill="Red" />
                    </h:FlashPanel>
                </Grid>
            </GroupBox>

            <GroupBox Height="500" Header="多颜色">
                <Grid>
                    <h:FlashPanel Width="400" Height="400" SplitMilliSecond="-700">
                        <h:FlashPanel.Timelines>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="1" To="0"
                                                 Duration="00:00:01" />
                        </h:FlashPanel.Timelines>

                        <Ellipse Fill="Red" />
                        <Ellipse Fill="Green" />
                        <Ellipse Fill="Orange" />
                        <Ellipse Fill="Purple" />
                        <Ellipse Fill="Blue" />
                    </h:FlashPanel>
                </Grid>
            </GroupBox>

            <GroupBox Height="500" Header="发送信号">
                <Grid>
                    <h:FlashPanel Width="500" Height="500" SplitMilliSecond="-700">
                        <h:FlashPanel.Timelines>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="1" To="0"
                                                 Duration="00:00:01" />
                        </h:FlashPanel.Timelines>

                        <Button Height="Auto"
                                h:Cattach.IconSize="155"
                                h:Cattach.Icon="&#xe7d5;"
                                Foreground="Red"
                                RenderTransformOrigin="0.5 0.8"
                                Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" />
                        <Button Height="Auto"
                                h:Cattach.IconSize="155"
                                h:Cattach.Icon="&#xe7d5;"
                                Foreground="Red"
                                RenderTransformOrigin="0.5 0.8"
                                Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" />
                        <Button Height="Auto"
                                h:Cattach.IconSize="155"
                                h:Cattach.Icon="&#xe7d5;"
                                Foreground="Red"
                                RenderTransformOrigin="0.5 0.8"
                                Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" />
                        <Button Height="Auto"
                                h:Cattach.IconSize="155"
                                h:Cattach.Icon="&#xe7d5;"
                                Foreground="Red"
                                RenderTransformOrigin="0.5 0.8"
                                Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" />
                        <Button Height="Auto"
                                h:Cattach.IconSize="155"
                                h:Cattach.Icon="&#xe7d5;"
                                Foreground="Red"
                                RenderTransformOrigin="0.5 0.8"
                                Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" />
                    </h:FlashPanel>
                </Grid>
            </GroupBox>

            <GroupBox Height="500" Header="发送信号">
                <Grid>
                    <h:FlashPanel Width="500" Height="500" SplitMilliSecond="-700">
                        <h:FlashPanel.Timelines>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 From="0" To="1"
                                                 Duration="00:00:01" />
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="1" To="0"
                                                 Duration="00:00:01" />
                        </h:FlashPanel.Timelines>

                        <Button Height="Auto"
                                h:Cattach.IconSize="155"
                                h:Cattach.Icon="&#xe7d5;"
                                Foreground="Red"
                                RenderTransformOrigin="0.5 1.0"
                                Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" />
                        <Button Height="Auto"
                                h:Cattach.IconSize="155"
                                h:Cattach.Icon="&#xe7d5;"
                                Foreground="Red"
                                RenderTransformOrigin="0.5 1.0"
                                Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" />
                        <Button Height="Auto"
                                h:Cattach.IconSize="155"
                                h:Cattach.Icon="&#xe7d5;"
                                Foreground="Red"
                                RenderTransformOrigin="0.5 1.0"
                                Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" />
                        <Button Height="Auto"
                                h:Cattach.IconSize="155"
                                h:Cattach.Icon="&#xe7d5;"
                                Foreground="Red"
                                RenderTransformOrigin="0.5 1.0"
                                Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" />
                        <Button Height="Auto"
                                h:Cattach.IconSize="155"
                                h:Cattach.Icon="&#xe7d5;"
                                Foreground="Red"
                                RenderTransformOrigin="0.5 1.0"
                                Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" />
                    </h:FlashPanel>
                </Grid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
