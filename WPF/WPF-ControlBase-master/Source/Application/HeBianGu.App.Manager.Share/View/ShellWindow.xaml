        <h:LinkActionGroup DisplayName="闪烁效果" Logo="&#xe7be;">
            <h:LinkActionGroup.Links>
                <h:LinkAction Action="Wave"
                              Controller="Flash"
                              DisplayName="地震波"
                              Logo="&#xe69f;" />
                <h:LinkAction Action="Flash"
                              Controller="Flash"
                              DisplayName="闪动"
                              Logo="&#xe69e;" />
                <h:LinkAction Action="Heart"
                              Controller="Flash"
                              DisplayName="心跳"
                              Logo="&#xe69f;" />
