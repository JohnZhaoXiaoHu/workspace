                              DisplayName="旋转角度"
                              Logo="&#xe69f;" />
                <h:LinkAction Action="Other"
                              Controller="Drawer"
                              DisplayName="其他组合"
                              Logo="&#xe69f;" />
            </h:LinkActionGroup.Links>
        </h:LinkActionGroup>

        <h:LinkActionGroup DisplayName="浮动窗口" Logo="&#xe7b8;">
            <h:LinkActionGroup.Links>
                <h:LinkAction Action="FloatCircle"
                              Controller="Float"
                              DisplayName="圆形列表"
                              Logo="&#xe69f;" />
