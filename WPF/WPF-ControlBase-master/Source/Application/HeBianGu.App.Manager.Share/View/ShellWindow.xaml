                              Controller="Transition"
                              DisplayName="默认效果"
                              Logo="&#xe69f;" />
                <h:LinkAction Action="Opacity"
                              Controller="Transition"
                              DisplayName="透明效果"
                              Logo="&#xe69f;" />
                <h:LinkAction Action="Rotate"
                              Controller="Transition"
                              DisplayName="旋转效果"
                              Logo="&#xe6a3;" />
                <h:LinkAction Action="Scale"
