<UserControl x:Class="HeBianGu.App.Manager.View.Float.FloatCircleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Float"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <ScrollViewer>
        <Grid>
            <GroupBox Header="CirlePanel">
                <UniformGrid Columns="3">
                    <Button Command="{Binding RelayCommand}" CommandParameter="{DynamicResource {x:Static h:FloatWindowBase.CircleKey}}" Content="Circle" />

                    <Button Command="{Binding RelayCommand}" CommandParameter="{DynamicResource {x:Static h:FloatWindowBase.ArcKey}}" Content="Arc" />

                    <Button Command="{Binding RelayCommand}" CommandParameter="{DynamicResource {x:Static h:FloatWindowBase.StackPanelKey}}" Content="Default" />

                    <Button Command="{Binding RelayCommand}" CommandParameter="{DynamicResource {x:Static h:FloatWindowBase.StackPanelTopLeftKey}}" Content="TopLeft" />

                    <Button Command="{Binding RelayCommand}" CommandParameter="{DynamicResource {x:Static h:FloatWindowBase.StackPanelTopRightKey}}" Content="TopRight" />

                    <Button Command="{Binding RelayCommand}" CommandParameter="{DynamicResource {x:Static h:FloatWindowBase.StackPanelBottomLeftKey}}" Content="BottomLeft" />
                </UniformGrid>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>
