<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="https://github.com/HeBianGu"
                    xmlns:local="clr-namespace:HeBianGu.Control.Screen"> 
    
    <Style BasedOn="{StaticResource {x:Static local:ScreenBackground.DefaultKey}}" TargetType="{x:Type local:ScreenBackground}">
        <Setter Property="Background" Value="{DynamicResource {x:Static h:BackgroundImageBrushKeys.Bg2}}"/>
    </Style>

    <Style BasedOn="{StaticResource {x:Static local:ScreenHeader.DefaultKey}}" TargetType="{x:Type local:ScreenHeader}">
        <Setter Property="Background" Value="{DynamicResource {x:Static h:HeaderImageBrushKeys.H2}}"/>
    </Style>
</ResourceDictionary>