<UserControl x:Class="HeBianGu.Control.Message.StringProgressDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.Control.Message"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Height="100"
             MinWidth="550"
             d:DesignHeight="300"
             d:DesignWidth="300"
             Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}"
             mc:Ignorable="d">
    <Grid Margin="16">
        <Label x:Name="Message"
               Content="正在加载..."
               FontSize="18"
               FontWeight="Bold"
               Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundDefault}}"
               Style="{DynamicResource {x:Static h:LabelKeys.Flash}}" />
    </Grid>
</UserControl>
