<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="https://github.com/HeBianGu"
                    xmlns:local="clr-namespace:HeBianGu.Control.DiagraphBox">

    <Style x:Key="{ComponentResourceKey ResourceId=S.DiagraphBox.Default, TypeInTargetAssembly={x:Type local:DiagraphBox}}" TargetType="{x:Type local:DiagraphBox}">
        <Setter Property="Foreground" Value="{DynamicResource {x:Static h:BrushKeys.ForegroundAssist}}" />
        <Setter Property="FontSize" Value="8" />
        <Setter Property="GridBackground" Value="{DynamicResource {x:Static h:BrushKeys.Dark0_2}}" />
        <Setter Property="GridLineBrush" Value="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}" />
        <Setter Property="GridMargin" Value="15" />
        <Setter Property="LargeLen" Value="8" />
        <Setter Property="SmallLen" Value="5" />
        <Setter Property="SmallSplitBrush" Value="{DynamicResource {x:Static h:BrushKeys.ForegroundAssist}}" />
        <Setter Property="SmallSplitValue" Value="25" />
        <Setter Property="SplitBrush" Value="{DynamicResource {x:Static h:BrushKeys.ForegroundAssist}}" />
        <Setter Property="SplitValue" Value="100" />
        <Setter Property="UseBorder" Value="True" />
        <Setter Property="UseBottom" Value="True" />
        <Setter Property="UseLeft" Value="True" />
        <Setter Property="UseRight" Value="True" />
        <Setter Property="UseSmallSplitVerticalLine" Value="True" />
        <Setter Property="UseSmallSpliteHorizontalLine" Value="True" />
        <Setter Property="UseSplitHorizontalLine" Value="True" />
        <Setter Property="UseSplitVerticalLine" Value="True" />
        <Setter Property="UseText" Value="True" />
        <Setter Property="UseTop" Value="True" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style BasedOn="{StaticResource {x:Static local:DiagraphBox.DefaultKey}}" TargetType="{x:Type local:DiagraphBox}" />

</ResourceDictionary>
