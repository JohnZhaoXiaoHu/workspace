<UserControl
    x:Class="MachineVision.Views.CircleMessureMatchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:halconView="clr-namespace:MachineVision.Shared2;assembly=MachineVision.Shared2"
    xmlns:local="clr-namespace:MachineVision.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewmodels="clr-namespace:MachineVision.ViewModels"
    d:Background="{DynamicResource MaterialDesign.Brush.Background}"
    d:DataContext="{d:DesignInstance viewmodels:CircleMessureMatchViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!-- 左半边标题 -->
            <StackPanel
                Grid.Column="0"
                Margin="20,10">
                <TextBlock
                    FontSize="17"
                    FontWeight="Bold"
                    Foreground="snow"
                    Text="get_metrology_object_result (Operator)" />
                <TextBlock
                    Margin="0,5"
                    FontSize="14"
                    Foreground="Snow"
                    Text="Get the results of the measurement of a metrology model."
                    TextWrapping="Wrap" />
            </StackPanel>

            <!-- 右半边匹配结果显示 -->
            <TextBlock
                Grid.Column="1"
                Margin="20"
                d:Text="消息"
                FontSize="19"
                Foreground="snow"
                Text="{Binding MatchResult.Message}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
        </Grid>

        <TabControl
            Grid.Row="1"
            HorizontalContentAlignment="Left"
            Style="{StaticResource MaterialDesignTabControlBase}">

            <TabItem Header="参数说明">

                <TextBlock />
            </TabItem>

            <TabItem Header="关联算子">
                <TextBlock />
            </TabItem>

            <TabItem Header="代码示例">

                <TextBlock />
            </TabItem>

            <TabItem Header="开始使用">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.8*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!-- 左边 -->
                    <Grid>


                        <halconView:HalconDrawShape
                            Grid.Row="0"
                            Background="Black"
                            DrawObjectInfos="{Binding DrawObjectInfos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            EditImage="{Binding EditImage, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                            HMWindow="{Binding HalconWindow, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <!-- 右边 -->
                    <TabControl
                        Grid.Column="1"
                        HorizontalContentAlignment="Left">
                        <TabItem Header="参数设置">
                            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                <StackPanel>

                                    <!-- ROI范围 -->
                                    <Expander>
                                        <Expander.Header>
                                            <TextBlock
                                                Margin="-16,0"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Foreground="White"
                                                Text="ROI范围" />
                                        </Expander.Header>
                                        <Expander.Content>
                                            <StackPanel>
                                                <Button
                                                    Margin="20"
                                                    Command="{Binding SetROICommand}"
                                                    Content="设定ROI范围" />
                                            </StackPanel>
                                        </Expander.Content>
                                    </Expander>

                                    <!-- 提取参数 -->
                                    <Expander>
                                        <Expander.Header>
                                            <TextBlock
                                                Margin="-16,0"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Foreground="White"
                                                Text="匹配参数" />
                                        </Expander.Header>
                                        <Expander.Content>
                                            <StackPanel>

                                                <Button
                                                    Margin="10,15"
                                                    Command="{Binding ExtractParamteCommand}"
                                                    Content="提取圆的参数" />

                                                <!-- 圆心横坐标 -->
                                                <TextBlock
                                                    Margin="20,10,0,0"
                                                    FontSize="14"
                                                    Foreground="Snow"
                                                    Text="Row(圆心横坐标)" />
                                                <TextBox
                                                    Margin="20,10"
                                                    md:HintAssist.Hint=""
                                                    BorderThickness="2"
                                                    FontSize="16"
                                                    Foreground="Snow"
                                                    IsReadOnly="True"
                                                    Text="{Binding TeamplateService.FindParamter.Row}"
                                                    TextAlignment="Center" />

                                                <!-- 圆心纵坐标 -->
                                                <TextBlock
                                                    Margin="20,10,0,0"
                                                    FontSize="14"
                                                    Foreground="Snow"
                                                    Text="Column(圆心纵坐标) " />
                                                <TextBox
                                                    Margin="20,10"
                                                    md:HintAssist.Hint=""
                                                    BorderThickness="2"
                                                    FontSize="16"
                                                    Foreground="Snow"
                                                    Text="{Binding TeamplateService.FindParamter.Column}"
                                                    TextAlignment="Center" />

                                                <!-- 圆的半径 -->
                                                <TextBlock
                                                    Margin="20,10,0,0"
                                                    FontSize="14"
                                                    Foreground="Snow"
                                                    Text="Radisus(圆的半径)" />
                                                <TextBox
                                                    Margin="20,10"
                                                    md:HintAssist.Hint=""
                                                    BorderThickness="2"
                                                    FontSize="16"
                                                    Foreground="Snow"
                                                    IsReadOnly="True"
                                                    Text="{Binding TeamplateService.FindParamter.Radius}"
                                                    TextAlignment="Center" />

                                                <!-- 卡尺尺寸(长) -->
                                                <TextBlock
                                                    Margin="20,10,0,0"
                                                    FontSize="14"
                                                    Foreground="Snow"
                                                    Text="MeasureLength1(卡尺尺寸“长”)" />
                                                <TextBox
                                                    Margin="20,10"
                                                    md:HintAssist.Hint="请输入参数"
                                                    BorderThickness="2"
                                                    FontSize="16"
                                                    Foreground="Snow"
                                                    Text="{Binding TeamplateService.FindParamter.MeasureLength1}"
                                                    TextAlignment="Center" />

                                                <!-- 卡尺尺寸(宽) -->
                                                <TextBlock
                                                    Margin="20,10,0,0"
                                                    FontSize="14"
                                                    Foreground="Snow"
                                                    Text="MeasureLength2(卡尺尺寸“宽”)" />
                                                <TextBox
                                                    Margin="20,10"
                                                    md:HintAssist.Hint="请输入参数"
                                                    BorderThickness="2"
                                                    FontSize="16"
                                                    Foreground="Snow"
                                                    Text="{Binding TeamplateService.FindParamter.MeasureLength2}"
                                                    TextAlignment="Center" />

                                                <!-- 边缘系数 -->
                                                <TextBlock
                                                    Margin="20,10,0,0"
                                                    FontSize="14"
                                                    Foreground="Snow"
                                                    Text="MeasureSigma(边缘系数)" />
                                                <TextBox
                                                    Margin="20,10"
                                                    md:HintAssist.Hint="请输入参数"
                                                    BorderThickness="2"
                                                    FontSize="16"
                                                    Foreground="Snow"
                                                    Text="{Binding TeamplateService.FindParamter.MeasureSigma}"
                                                    TextAlignment="Center" />

                                                <!-- 边缘阈值 -->
                                                <TextBlock
                                                    Margin="20,10,0,0"
                                                    FontSize="14"
                                                    Foreground="Snow"
                                                    Text="MeasureThreshold(边缘阈值)" />
                                                <TextBox
                                                    Margin="20,10"
                                                    md:HintAssist.Hint="请输入参数"
                                                    BorderThickness="2"
                                                    FontSize="16"
                                                    Foreground="Snow"
                                                    Text="{Binding TeamplateService.FindParamter.MeasureThreshold}"
                                                    TextAlignment="Center" />


                                            </StackPanel>
                                        </Expander.Content>
                                    </Expander>

                                    <!-- 查找参数 -->
                                    <Expander>
                                        <Expander.Header>
                                            <TextBlock
                                                Margin="-16,0"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Foreground="White"
                                                Text="匹配结果" />
                                        </Expander.Header>
                                        <Expander.Content>
                                            <Button
                                                Margin="20"
                                                Command="{Binding FindTeamplateCommand}"
                                                Content="查找匹配模板" />
                                        </Expander.Content>
                                    </Expander>
                                </StackPanel>



                                <!-- 创建参数 -->

                            </ScrollViewer>
                        </TabItem>

                    </TabControl>
                </Grid>

            </TabItem>

        </TabControl>

    </Grid>
</UserControl>
