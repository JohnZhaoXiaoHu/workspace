<UserControl
    x:Class="MachineVision.Defect.Controls.ProjectDisplayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:halcon="clr-namespace:HalconDotNet;assembly=halcondotnet"
    xmlns:local="clr-namespace:MachineVision.Defect.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <!-- 右键菜单 -->
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem
                    Click="DrawReferPoint_Click"
                    Header="绘制参考点" />
                <MenuItem
                    Click="UpdateReferPointParamter_Click"
                    Header="更新参考点参数" />
                <MenuItem
                    Click="DrawInspectRegion_Click"
                    Header="绘制检测区域" />
                <MenuItem
                    Click="UpdateInspectRegion_Click"
                    Header="更新检测区域" />

                <MenuItem
                    Click="ClearWindow_Click"
                    Header="清空" />
            </ContextMenu>
        </Grid.ContextMenu>
        <TextBlock
            x:Name="textMessage"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Panel.ZIndex="1"
            d:Text="123"
            FontSize="21"
            FontWeight="Bold"
            Foreground="Red" />

        <!-- halcon控件 -->
        <halcon:HSmartWindowControlWPF x:Name="hsmart" />
    </Grid>
</UserControl>
