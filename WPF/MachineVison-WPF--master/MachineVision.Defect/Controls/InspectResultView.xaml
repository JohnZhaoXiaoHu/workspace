<UserControl
    x:Class="MachineVision.Defect.Controls.InspectResultView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:halcon="clr-namespace:HalconDotNet;assembly=halcondotnet"
    xmlns:local="clr-namespace:MachineVision.Defect.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="black"
    Loaded="Loaded_Click"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="textMSG"
            Margin="20,5"
            d:Foreground="LightGreen"
            d:Text="123"
            FontSize="21" />

        <halcon:HSmartWindowControlWPF
            x:Name="hSmart"
            Grid.Row="1">
            <halcon:HSmartWindowControlWPF.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="添加训练图片"  Click="AddTrainImage_Click"/>
                </ContextMenu>
            </halcon:HSmartWindowControlWPF.ContextMenu>
        </halcon:HSmartWindowControlWPF>
    </Grid>
</UserControl>
