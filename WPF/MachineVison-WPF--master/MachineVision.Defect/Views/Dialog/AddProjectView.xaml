<UserControl
    x:Class="MachineVision.Defect.Views.AddProjectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MachineVision.Defect.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:MachineVision.Defect.ViewModels"
    MinWidth="500"
    d:DataContext="{d:DesignInstance Type=vm:AddProjectViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesign.Brush.Background}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="10"
            HorizontalAlignment="Center"
            FontSize="31"
            FontWeight="Bold"
            Foreground="White"
            Text="添加项目" />
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBox
                MinWidth="300"
                MinHeight="60"
                HorizontalContentAlignment="Center"
                md:HintAssist.Hint="请输入项目名称"
                FontSize="17"
                Foreground="White"
                Text="{Binding ProjectName}" />

            <StackPanel
                Margin="0,20"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    MinWidth="120"
                    Margin="10"
                    Padding="5"
                    VerticalAlignment="Center"
                    Command="{Binding AddProjectCommand}"
                    Content="确认添加"
                    FontSize="17" />
                <Button
                    MinWidth="120"
                    Margin="10"
                    Padding="5"
                    VerticalAlignment="Center"
                    Command="{Binding CancelCommand}"
                    Content="取消"
                    FontSize="17" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
