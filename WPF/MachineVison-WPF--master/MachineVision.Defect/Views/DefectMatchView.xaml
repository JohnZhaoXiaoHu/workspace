<UserControl
    x:Class="MachineVision.Defect.Views.DefectMatchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:MachineVision.Defect.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MachineVision.Defect.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:DefectMatchViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommad}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="30,0"
            Padding="10"
            FontSize="28"
            FontWeight="Bold"
            Foreground="White"
            Text="缺陷检测(项目管理)" />

        <DockPanel
            Grid.Row="1"
            LastChildFill="False">
            <StackPanel
                Margin="20,10"
                Orientation="Horizontal">
                <TextBlock
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="19"
                    Foreground="White"
                    Text="搜索条件:" />
                <TextBox
                    MinWidth="200"
                    Margin="20,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    FontSize="17"
                    Foreground="White"
                    Text="{Binding SearchWord}" />
                <Button
                    MinWidth="80"
                    MinHeight="40"
                    Margin="40,0"
                    Padding="5"
                    VerticalAlignment="Center"
                    Command="{Binding SearchCommand}"
                    Content="搜索"
                    DockPanel.Dock="Right"
                    FontSize="19" />
            </StackPanel>
            <Button
                MinWidth="80"
                MinHeight="40"
                Margin="20,10"
                Padding="5"
                VerticalAlignment="Center"
                Command="{Binding AddCommand}"
                Content="新建项目"
                DockPanel.Dock="Right"
                FontSize="19" />
        </DockPanel>

        <DataGrid
            Grid.Row="2"
            Margin="20,10"
            AutoGenerateColumns="False"
            BorderThickness="2"
            CanUserAddRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding ProjectList}"
            Style="{StaticResource MaterialDesignDataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Id}"
                    Header="序号" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="项目名称" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CreateTime, StringFormat='yyyy-MM-dd HH:mm:ss'}"
                    Header="创建日期" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding UpdateTime, StringFormat='yyyy-MM-dd HH:mm:ss'}"
                    Header="更新日期" />
                <DataGridTemplateColumn
                    Width="*"
                    Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Padding="5"
                                    Background="Green"
                                    Command="{Binding DataContext.ChooseCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="选择"
                                    FontSize="17" />
                                <Button
                                    Margin="20,0,17,0"
                                    Padding="5"
                                    Background="blue"
                                    Command="{Binding DataContext.UpdateCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="修改"
                                    FontSize="17" />
                                <Button
                                    Margin="3,0"
                                    Padding="5"
                                    Background="red"
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="删除"
                                    FontSize="17" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
